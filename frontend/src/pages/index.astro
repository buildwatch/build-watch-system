---
import Layout from "../layouts/Layout.astro";
---
<Layout title="Build Watch | Santa Cruz LGU" description="Santa Cruz LGU Project Monitoring and Evaluation System - Transparent Governance and Real-Time Project Tracking">
  <script type="module" src="https://unpkg.com/@splinetool/viewer@1.10.39/build/spline-viewer.js"></script>
  <div class="min-h-screen flex flex-col bg-gradient-to-br from-blue-600 via-blue-700 to-blue-800 font-[Montserrat] relative overflow-hidden">
    {/* 3D Background Container */}
    <div id="3d-background" class="absolute inset-0 w-full h-full z-0">
    </div>
    
    {/* Enhanced Logo Section - Top Middle */}
    <div class="relative z-30 flex justify-center items-center py-6">
      <div class="flex flex-col items-center group cursor-pointer">
        <div class="relative">
          <img src="/top-logo.png" alt="Build Watch Logo" class="w-48 h-48 object-contain mb-1 transition-all duration-500 group-hover:scale-110 group-hover:rotate-3 drop-shadow-lg" draggable="false" />
          <div class="absolute inset-0 bg-white/20 rounded-full blur-lg opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        </div>
        <span class="text-white/80 text-lg font-medium tracking-wide mt-1">Santa Cruz LGU</span>
      </div>
    </div>

    {/* Hero Section with Carousel */}
    <main class="flex-1 flex flex-col items-center justify-center relative overflow-hidden">
      <div class="relative z-10 flex flex-col items-center justify-center w-full max-w-4xl px-4 py-16 fade-in" id="carousel-content">
        <h1 id="carousel-title" class="text-5xl md:text-6xl font-extrabold text-white drop-shadow-2xl leading-tight mb-6 text-center content-slide-title">BUILD WATCH</h1>
        <p id="carousel-desc" class="text-lg md:text-xl font-medium text-white/90 mb-10 max-w-3xl mx-auto text-center content-slide-subtitle">Empowering Local Governance Through Digital Innovation and Modern Technology Solutions</p>
        <div class="flex justify-center w-full">
          <a href="https://www.dime.gov.ph/about" id="learn-more-btn" target="_blank" rel="noopener noreferrer"
             class="group px-6 py-3 bg-white text-blue-600 font-bold text-base rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 hover:bg-gray-50 mb-8 relative overflow-hidden content-slide-button text-center">
          <span class="relative z-10">Learn More</span>
          <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-blue-700 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <span class="absolute inset-0 bg-gradient-to-r from-blue-600 to-blue-700 opacity-0 group-hover:opacity-100 transition-opacity duration-300 text-white font-bold text-base flex items-center justify-center">Learn More</span>
          </a>
        </div>
      </div>
    </main>

    {/* Enhanced Bottom Navigation */}
    <div class="relative z-20 px-6 py-6">
      <div class="bg-white/10 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/20 px-8 py-6 flex items-center justify-between gap-6 relative">
        {/* Enhanced Carousel Controls */}
        <div class="flex items-center gap-6">
          <button id="carousel-prev" class="group w-12 h-12 flex items-center justify-center rounded-2xl bg-white/20 backdrop-blur-sm shadow-lg hover:bg-white/30 hover:scale-110 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-white/50 border border-white/30">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="white" class="w-7 h-7 group-hover:scale-110 transition-transform duration-300">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
            </svg>
          </button>
          
          <div class="flex items-center gap-4 px-4 py-2 bg-white/10 backdrop-blur-md rounded-2xl border border-white/20" id="carousel-indicators"></div>
          
          <button id="carousel-next" class="group w-12 h-12 flex items-center justify-center rounded-2xl bg-white/20 backdrop-blur-sm shadow-lg hover:bg-white/30 hover:scale-110 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-white/50 border border-white/30">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="white" class="w-7 h-7 group-hover:scale-110 transition-transform duration-300">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
            </svg>
          </button>
        </div>

        {/* Enhanced Slogan - Absolutely Centered */}
        <div class="absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2 pointer-events-none">
          <div class="text-center max-w-md">
            <span class="text-white text-lg md:text-xl font-bold drop-shadow-lg block">
              Built to <span class="text-yellow-300 font-black">Monitor</span>. 
              Designed for <span class="text-yellow-300 font-black">Trust</span>.
            </span>
            <div class="mt-2 text-white/80 text-sm font-medium">
              Transparent Governance • Real-Time Tracking • Community Engagement
            </div>
          </div>
        </div>

        {/* Enhanced Let's Start Button */}
        <a href="/home" class="group px-8 py-4 font-black text-lg rounded-2xl transition-all duration-500 flex items-center justify-center
                    bg-white/90 backdrop-blur-sm text-blue-600 border-2 border-white/50 shadow-xl hover:shadow-2xl hover:scale-105 hover:bg-gradient-to-r hover:from-blue-600 hover:to-blue-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-white/50 relative overflow-hidden z-10" id="lets-start-btn-sticky">
          <span class="relative z-10">LET'S START</span>
          <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-blue-700 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <span class="absolute inset-0 bg-gradient-to-r from-blue-600 to-blue-700 opacity-0 group-hover:opacity-100 transition-opacity duration-500 text-white font-black text-lg flex items-center justify-center">LET'S START</span>
        </a>
      </div>
    </div>
  </div>
</Layout>

<script is:inline>
  // Wait for DOM to be fully loaded before running any JavaScript
  document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM Content Loaded - Starting initialization...');
    initializeCarousel();
  });
  
  // Modern 3D Background System - Move slides array outside function for global access
  const slides = [
    {
      title: "BUILD WATCH",
      subtitle: "Empowering Local Governance Through Digital Innovation and Modern Technology Solutions",
      description: "A comprehensive digital platform revolutionizing how local government units manage, monitor, and track infrastructure projects with transparency and efficiency.",
      bg: 'governance-modern',
      image: 'data:image/svg+xml;base64,'
    },
    {
      title: "REAL-TIME PROGRESS",
      subtitle: "Track Every Milestone with Precision and Advanced Analytics Dashboard",
      description: "Monitor project development in real-time with advanced analytics, automated reporting, and comprehensive progress tracking systems.",
      bg: 'progress-modern',
      image: 'data:image/svg+xml;base64,'
    },
    {
      title: "DIGITAL TRANSFORMATION",
      subtitle: "From Manual to Digital Excellence with Cutting-Edge Technology Integration",
      description: "Experience the future of project management with cutting-edge digital tools, automated workflows, and intelligent decision support systems.",
      bg: 'digital-modern',
      image: 'data:image/svg+xml;base64,'
    },
    {
      title: "TRANSPARENCY & ACCOUNTABILITY",
      subtitle: "Building Trust Through Open Governance and Comprehensive Public Reporting",
      description: "Foster public trust with complete transparency, real-time reporting, and comprehensive accountability measures for all project activities.",
      bg: 'accountability-modern',
      image: 'data:image/svg+xml;base64,'
    },
    {
      title: "COMMUNITY TRANSFORMATION",
      subtitle: "Empowering Communities Through Innovation and Sustainable Development Programs",
      description: "Drive positive change in local communities with data-driven insights, collaborative planning, and sustainable development initiatives.",
      bg: 'transformation-modern',
      image: 'data:image/svg+xml;base64,'
    }
  ];

  let currentSlide = 0;
  
  function initializeCarousel() {
  
  // Get DOM elements with detailed logging
  const carouselTitle = document.getElementById('carousel-title');
  const carouselDesc = document.getElementById('carousel-desc');
  const indicators = document.getElementById('carousel-indicators');
  const content = document.getElementById('carousel-content');
  const background3d = document.getElementById('3d-background');
  
  console.log('Element search results:', {
    carouselTitle: carouselTitle,
    carouselDesc: carouselDesc,
    indicators: indicators,
    content: content,
    background3d: background3d
  });

  function create3DBackground(slide) {
    console.log('Creating system-specific background for slide:', slide);
    
    const background = document.getElementById('3d-background');
    if (!background) {
      console.error('3D background element not found');
      return;
    }
    
    // Clear previous content
    background.innerHTML = '';
    
    console.log('Background container cleared, creating system-specific elements...');
    
    // Create main background gradient
    const bgGradient = document.createElement('div');
    bgGradient.className = 'absolute inset-0 w-full h-full';
    bgGradient.style.background = `linear-gradient(135deg, rgba(37,99,235,0.9) 0%, rgba(59,130,246,0.7) 50%, rgba(147,197,253,0.5) 100%)`;
    bgGradient.style.zIndex = '0';
    background.appendChild(bgGradient);
    
    console.log('Creating content-specific elements for:', slide.bg);
    
    // Create content-specific system animations
    switch(slide.bg) {
      case 'governance-modern':
        console.log('Creating governance system elements...');
        createGovernanceSystemElements(background);
        break;
      case 'progress-modern':
        console.log('Creating progress system elements...');
        createProgressSystemElements(background);
        break;
      case 'digital-modern':
        console.log('Creating digital system elements...');
        createDigitalSystemElements(background);
        break;
      case 'accountability-modern':
        console.log('Creating accountability system elements...');
        createAccountabilitySystemElements(background);
        break;
      case 'transformation-modern':
        console.log('Creating transformation system elements...');
        createTransformationSystemElements(background);
        break;
      default:
        console.warn('Unknown background type:', slide.bg);
    }
    
    console.log('Interactive background creation completed');
  }

  function createGovernanceSystemElements(container) {
    console.log('Creating modern 3D governance background...');
    
    // Create modern 3D governance scene
    const scene3D = document.createElement('div');
    scene3D.className = 'absolute inset-0 w-full h-full modern-3d-scene';
    scene3D.style.zIndex = '1';
    scene3D.style.perspective = '1200px';
    scene3D.style.perspectiveOrigin = 'center center';
    scene3D.style.background = 'linear-gradient(135deg, rgba(59,130,246,0.1) 0%, rgba(37,99,235,0.05) 100%)';
    
    // Modern government building complex
    for (let i = 0; i < 6; i++) {
      const building = document.createElement('div');
      building.className = 'modern-building';
      building.style.position = 'absolute';
      building.style.left = `${10 + i * 15}%`;
      building.style.bottom = '10%';
      building.style.width = '100px';
      building.style.height = `${150 + Math.random() * 100}px`;
      building.style.background = `linear-gradient(135deg, 
        rgba(255,255,255,0.15) 0%, 
        rgba(59,130,246,0.1) 50%, 
        rgba(255,255,255,0.05) 100%)`;
      building.style.backdropFilter = 'blur(10px)';
      building.style.border = '1px solid rgba(255,255,255,0.2)';
      building.style.borderRadius = '12px 12px 0 0';
      building.style.transform = `rotateY(${Math.random() * 15 - 7.5}deg) rotateX(3deg) translateZ(${i * 20}px)`;
      building.style.boxShadow = `
        0 20px 40px rgba(0,0,0,0.1),
        inset 0 1px 0 rgba(255,255,255,0.3),
        0 0 60px rgba(59,130,246,0.2)`;
      building.style.animation = `modernBuildingFloat ${4 + i * 0.5}s ease-in-out infinite`;
      building.style.animationDelay = `${i * 0.3}s`;
      
      // Add modern windows with LED-like glow
      for (let j = 0; j < 6; j++) {
        const window = document.createElement('div');
        window.className = 'modern-window';
        window.style.position = 'absolute';
        window.style.left = '15%';
        window.style.top = `${10 + j * 15}%`;
        window.style.width = '70%';
        window.style.height = '8%';
        window.style.background = `linear-gradient(90deg, 
          rgba(64,224,208,0.8) 0%, 
          rgba(0,191,255,0.9) 50%, 
          rgba(64,224,208,0.8) 100%)`;
        window.style.borderRadius = '4px';
        window.style.boxShadow = `
          0 0 20px rgba(64,224,208,0.6),
          inset 0 1px 2px rgba(255,255,255,0.3)`;
        window.style.animation = `modernWindowPulse ${2 + Math.random() * 2}s ease-in-out infinite`;
        window.style.animationDelay = `${j * 0.2}s`;
        building.appendChild(window);
      }
      
      scene3D.appendChild(building);
    }
    
    // Floating holographic data panels
    for (let i = 0; i < 8; i++) {
      const panel = document.createElement('div');
      panel.className = 'holo-panel';
      panel.style.position = 'absolute';
      panel.style.left = `${15 + Math.random() * 70}%`;
      panel.style.top = `${15 + Math.random() * 50}%`;
      panel.style.width = '120px';
      panel.style.height = '80px';
      panel.style.background = `linear-gradient(135deg, 
        rgba(255,255,255,0.1) 0%, 
        rgba(0,191,255,0.15) 50%, 
        rgba(255,255,255,0.05) 100%)`;
      panel.style.backdropFilter = 'blur(15px)';
      panel.style.border = '1px solid rgba(0,191,255,0.3)';
      panel.style.borderRadius = '12px';
      panel.style.transform = `rotateY(${Math.random() * 45}deg) rotateX(${Math.random() * 30}deg) translateZ(${Math.random() * 100}px)`;
      panel.style.boxShadow = `
        0 15px 35px rgba(0,191,255,0.2),
        inset 0 1px 0 rgba(255,255,255,0.2)`;
      panel.style.animation = `holoPanelFloat ${5 + Math.random() * 3}s ease-in-out infinite`;
      panel.style.animationDelay = `${i * 0.4}s`;
      
      // Add data lines
      for (let k = 0; k < 4; k++) {
        const line = document.createElement('div');
        line.style.position = 'absolute';
        line.style.left = '15%';
        line.style.top = `${20 + k * 18}%`;
        line.style.width = `${60 + Math.random() * 25}%`;
        line.style.height = '2px';
        line.style.background = `linear-gradient(90deg, 
          transparent 0%, 
          rgba(0,191,255,0.8) 50%, 
          transparent 100%)`;
        line.style.borderRadius = '1px';
        line.style.animation = `dataFlow ${1 + Math.random()}s ease-in-out infinite`;
        line.style.animationDelay = `${k * 0.2}s`;
        panel.appendChild(line);
      }
      
      scene3D.appendChild(panel);
    }
    
    // Particle system
    for (let i = 0; i < 40; i++) {
      const particle = document.createElement('div');
      particle.className = 'modern-particle';
      particle.style.position = 'absolute';
      particle.style.left = `${Math.random() * 100}%`;
      particle.style.top = `${Math.random() * 100}%`;
      particle.style.width = `${Math.random() * 6 + 2}px`;
      particle.style.height = `${Math.random() * 6 + 2}px`;
      particle.style.background = `radial-gradient(circle, 
        rgba(0,191,255,0.9) 0%, 
        rgba(64,224,208,0.6) 100%)`;
      particle.style.borderRadius = '50%';
      particle.style.boxShadow = `0 0 ${Math.random() * 20 + 10}px rgba(0,191,255,0.6)`;
      particle.style.animation = `particleFloat ${3 + Math.random() * 4}s ease-in-out infinite`;
      particle.style.animationDelay = `${Math.random() * 2}s`;
      scene3D.appendChild(particle);
    }
    
    container.appendChild(scene3D);
    console.log('Modern 3D governance scene created');
  }

  function createProgressSystemElements(container) {
    console.log('Creating modern 3D progress background...');
    
    // Create modern progress analytics scene
    const scene3D = document.createElement('div');
    scene3D.className = 'absolute inset-0 w-full h-full modern-3d-scene';
    scene3D.style.zIndex = '1';
    scene3D.style.perspective = '1200px';
    scene3D.style.background = 'linear-gradient(135deg, rgba(34,197,94,0.1) 0%, rgba(16,185,129,0.05) 100%)';
    
    // Animated 3D progress bars
    for (let i = 0; i < 8; i++) {
      const progressBar = document.createElement('div');
      progressBar.className = 'modern-progress-bar';
      progressBar.style.position = 'absolute';
      progressBar.style.left = `${5 + i * 12}%`;
      progressBar.style.bottom = '15%';
      progressBar.style.width = '60px';
      progressBar.style.height = `${80 + Math.random() * 120}px`;
      progressBar.style.background = `linear-gradient(180deg, 
        rgba(34,197,94,0.2) 0%, 
        rgba(34,197,94,0.8) 100%)`;
      progressBar.style.backdropFilter = 'blur(10px)';
      progressBar.style.border = '1px solid rgba(34,197,94,0.3)';
      progressBar.style.borderRadius = '8px';
      progressBar.style.transform = `rotateY(${Math.random() * 20 - 10}deg) translateZ(${i * 15}px)`;
      progressBar.style.boxShadow = `
        0 15px 30px rgba(34,197,94,0.3),
        inset 0 1px 0 rgba(255,255,255,0.2)`;
      progressBar.style.animation = `progressBarGrow ${3 + i * 0.3}s ease-in-out infinite`;
      progressBar.style.animationDelay = `${i * 0.2}s`;
      
      // Add progress fill animation
      const fill = document.createElement('div');
      fill.style.position = 'absolute';
      fill.style.bottom = '0';
      fill.style.left = '0';
      fill.style.width = '100%';
      fill.style.height = `${30 + Math.random() * 70}%`;
      fill.style.background = `linear-gradient(180deg, 
        rgba(34,197,94,0.9) 0%, 
        rgba(16,185,129,1) 100%)`;
      fill.style.borderRadius = '0 0 8px 8px';
      fill.style.boxShadow = '0 0 20px rgba(34,197,94,0.8)';
      fill.style.animation = `progressFillPulse ${2 + Math.random()}s ease-in-out infinite`;
      progressBar.appendChild(fill);
      
      scene3D.appendChild(progressBar);
    }
    
    // Floating metric cards
    for (let i = 0; i < 6; i++) {
      const card = document.createElement('div');
      card.className = 'metric-card';
      card.style.position = 'absolute';
      card.style.left = `${20 + Math.random() * 60}%`;
      card.style.top = `${20 + Math.random() * 40}%`;
      card.style.width = '100px';
      card.style.height = '60px';
      card.style.background = `linear-gradient(135deg, 
        rgba(255,255,255,0.15) 0%, 
        rgba(34,197,94,0.1) 100%)`;
      card.style.backdropFilter = 'blur(15px)';
      card.style.border = '1px solid rgba(34,197,94,0.3)';
      card.style.borderRadius = '12px';
      card.style.transform = `rotateY(${Math.random() * 30}deg) rotateX(${Math.random() * 20}deg)`;
      card.style.boxShadow = '0 10px 25px rgba(34,197,94,0.2)';
      card.style.animation = `metricFloat ${4 + Math.random() * 2}s ease-in-out infinite`;
      card.style.animationDelay = `${i * 0.5}s`;
      
      // Add percentage text effect
      const percent = document.createElement('div');
      percent.style.position = 'absolute';
      percent.style.top = '50%';
      percent.style.left = '50%';
      percent.style.transform = 'translate(-50%, -50%)';
      percent.style.color = 'rgba(34,197,94,0.9)';
      percent.style.fontSize = '14px';
      percent.style.fontWeight = 'bold';
      percent.style.textShadow = '0 0 10px rgba(34,197,94,0.5)';
      percent.textContent = `${Math.floor(Math.random() * 100)}%`;
      card.appendChild(percent);
      
      scene3D.appendChild(card);
    }
    
    container.appendChild(scene3D);
    console.log('Modern 3D progress scene created');
  }

  function createDigitalSystemElements(container) {
    console.log('Creating modern 3D digital transformation background...');
    
    // Create modern digital scene with neural network theme
    const scene3D = document.createElement('div');
    scene3D.className = 'absolute inset-0 w-full h-full modern-3d-scene';
    scene3D.style.zIndex = '1';
    scene3D.style.perspective = '1200px';
    scene3D.style.background = 'linear-gradient(135deg, rgba(139,92,246,0.1) 0%, rgba(124,58,237,0.05) 100%)';
    
    // Digital devices representing government digitization
    const deviceTypes = ['laptop', 'tablet', 'mobile', 'server'];
    for (let i = 0; i < 8; i++) {
      const device = document.createElement('div');
      device.className = 'digital-device';
      device.style.position = 'absolute';
      device.style.left = `${10 + Math.random() * 80}%`;
      device.style.top = `${15 + Math.random() * 70}%`;
      
      const deviceType = deviceTypes[Math.floor(Math.random() * deviceTypes.length)];
      if (deviceType === 'laptop') {
        device.style.width = '60px';
        device.style.height = '40px';
        device.style.borderRadius = '6px';
      } else if (deviceType === 'tablet') {
        device.style.width = '35px';
        device.style.height = '50px';
        device.style.borderRadius = '8px';
      } else if (deviceType === 'mobile') {
        device.style.width = '25px';
        device.style.height = '45px';
        device.style.borderRadius = '12px';
      } else {
        device.style.width = '50px';
        device.style.height = '60px';
        device.style.borderRadius = '4px';
      }
      
      device.style.background = `linear-gradient(135deg, 
        rgba(139,92,246,0.3) 0%, 
        rgba(124,58,237,0.6) 100%)`;
      device.style.backdropFilter = 'blur(8px)';
      device.style.border = '2px solid rgba(139,92,246,0.4)';
      device.style.boxShadow = `
        0 15px 30px rgba(139,92,246,0.4),
        inset 0 2px 6px rgba(255,255,255,0.2)`;
      device.style.transform = `rotateY(${Math.random() * 20 - 10}deg) rotateX(${Math.random() * 15 - 7.5}deg)`;
      device.style.animation = `deviceFloat ${3 + Math.random() * 2}s ease-in-out infinite`;
      device.style.animationDelay = `${i * 0.4}s`;
      
      // Add screen glow
      const screen = document.createElement('div');
      screen.style.position = 'absolute';
      screen.style.top = '10%';
      screen.style.left = '10%';
      screen.style.width = '80%';
      screen.style.height = '60%';
      screen.style.background = `linear-gradient(135deg, 
        rgba(139,92,246,0.9) 0%, 
        rgba(124,58,237,0.7) 100%)`;
      screen.style.borderRadius = '2px';
      screen.style.boxShadow = '0 0 15px rgba(139,92,246,0.8)';
      screen.style.animation = `screenGlow ${2 + Math.random()}s ease-in-out infinite`;
      device.appendChild(screen);
      
      scene3D.appendChild(device);
    }
    
    // Data streams representing digital workflows
    for (let i = 0; i < 12; i++) {
      const stream = document.createElement('div');
      stream.className = 'data-stream';
      stream.style.position = 'absolute';
      stream.style.left = `${Math.random() * 90}%`;
      stream.style.top = `${Math.random() * 80}%`;
      stream.style.width = `${100 + Math.random() * 150}px`;
      stream.style.height = '3px';
      stream.style.background = `linear-gradient(90deg, 
        transparent 0%, 
        rgba(139,92,246,0.8) 25%, 
        rgba(124,58,237,0.9) 75%, 
        transparent 100%)`;
      stream.style.transform = `rotate(${Math.random() * 360}deg)`;
      stream.style.borderRadius = '2px';
      stream.style.boxShadow = '0 0 10px rgba(139,92,246,0.6)';
      stream.style.animation = `dataStreamFlow ${2 + Math.random() * 3}s ease-in-out infinite`;
      stream.style.animationDelay = `${Math.random() * 2}s`;
      scene3D.appendChild(stream);
    }
    
    // Digital transformation icons (gears, cloud, etc.)
    for (let i = 0; i < 10; i++) {
      const icon = document.createElement('div');
