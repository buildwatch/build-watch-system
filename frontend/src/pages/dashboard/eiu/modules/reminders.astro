export const prerender = false;
---
import Layout from '../../../../layouts/Layout.astro';
import EIULayout from '../../../../components/EIULayout.astro';

// Reminders data
let upcomingDeadlines = [
  {
    id: 1,
    title: 'Monthly Progress Report',
    project: 'Santa Cruz Municipal Hall Renovation',
    deadline: '2025-02-05',
    daysLeft: 5,
    priority: 'high',
    type: 'report'
  },
  {
    id: 2,
    title: 'Financial Report Submission',
    project: 'Barangay Road Network Improvement',
    deadline: '2025-02-10',
    daysLeft: 10,
    priority: 'medium',
    type: 'financial'
  },
  {
    id: 3,
    title: 'Site Inspection',
    project: 'Public Market Modernization',
    deadline: '2025-02-15',
    daysLeft: 15,
    priority: 'low',
    type: 'inspection'
  }
];

let timelineEvents = [
  {
    id: 1,
    date: '2025-01-15',
    title: 'Project Started',
    project: 'Municipal Hall Renovation',
    type: 'milestone',
    status: 'completed'
  },
  {
    id: 2,
    date: '2025-01-30',
    title: 'Foundation Completed',
    project: 'Municipal Hall Renovation',
    type: 'milestone',
    status: 'completed'
  },
  {
    id: 3,
    date: '2025-02-05',
    title: 'Monthly Report Due',
    project: 'Municipal Hall Renovation',
    type: 'deadline',
    status: 'pending'
  }
];
---

<Layout title="Reminders & Timeline - EIU Personnel">
  <EIULayout>
    <section class="p-8 bg-gradient-to-br from-gray-50 to-white min-h-screen">
      <!-- Header -->
      <div class="flex items-center justify-between mb-8">
        <div>
          <h1 class="text-3xl font-bold text-gray-800 mb-2">Reminders & Timeline</h1>
          <p class="text-gray-600">Track deadlines, milestones, and project timelines</p>
        </div>
        <div class="flex gap-3">
          <button class="px-4 py-2 bg-red-100 text-red-700 rounded-lg font-semibold hover:bg-red-200 transition-all flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            {upcomingDeadlines.filter(d => d.daysLeft <= 7).length} Urgent
          </button>
          <button class="px-6 py-2 bg-gradient-to-r from-[#3C9CEB] to-[#2a7bb8] text-white rounded-xl font-semibold shadow-lg hover:from-[#2a7bb8] hover:to-[#3C9CEB] transition-all duration-300">
            Add Reminder
          </button>
        </div>
      </div>

      <!-- Upcoming Deadlines -->
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 mb-8">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Upcoming Deadlines</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {upcomingDeadlines.map(deadline => (
            <div class={`p-4 rounded-lg border-l-4 ${
              deadline.priority === 'high' ? 'bg-red-50 border-red-400' :
              deadline.priority === 'medium' ? 'bg-yellow-50 border-yellow-400' :
              'bg-green-50 border-green-400'
            }`}>
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <h4 class="font-medium text-gray-800">{deadline.title}</h4>
                  <p class="text-sm text-gray-600">{deadline.project}</p>
                  <p class="text-xs text-gray-500">Due: {deadline.deadline}</p>
                </div>
                <div class="text-right">
                  <span class={`px-2 py-1 rounded-full text-xs font-semibold ${
                    deadline.priority === 'high' ? 'bg-red-100 text-red-700' :
                    deadline.priority === 'medium' ? 'bg-yellow-100 text-yellow-700' :
                    'bg-green-100 text-green-700'
                  }`}>
                    {deadline.daysLeft} days left
                  </span>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Timeline and Calendar -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Project Timeline -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Project Timeline</h3>
          <div class="space-y-4">
            {timelineEvents.map(event => (
              <div class="flex items-start gap-4">
                <div class={`w-3 h-3 rounded-full mt-2 ${
                  event.status === 'completed' ? 'bg-green-500' : 'bg-[#3C9CEB]'
                }`}></div>
                <div class="flex-1">
                  <div class="flex items-center gap-2 mb-1">
                    <h4 class="font-medium text-gray-800">{event.title}</h4>
                    <span class={`px-2 py-1 rounded-full text-xs font-semibold ${
                      event.type === 'milestone' ? 'bg-blue-100 text-blue-700' : 'bg-orange-100 text-orange-700'
                    }`}>
                      {event.type}
                    </span>
                  </div>
                  <p class="text-sm text-gray-600">{event.project}</p>
                  <p class="text-xs text-gray-500">{event.date}</p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Calendar View -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Calendar View</h3>
          <div class="bg-gray-100 rounded-lg h-64 flex items-center justify-center">
            <div class="text-center">
              <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <p class="text-gray-500">Interactive Calendar</p>
              <p class="text-sm text-gray-400">View deadlines and events</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Timeline Actions</h3>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <button class="flex items-center gap-3 p-4 bg-blue-50 hover:bg-blue-100 rounded-xl transition-all duration-300">
            <svg class="w-5 h-5 text-[#3C9CEB]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <span class="font-medium text-[#3C9CEB]">Add Reminder</span>
          </button>
          <button class="flex items-center gap-3 p-4 bg-green-50 hover:bg-green-100 rounded-xl transition-all duration-300">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <span class="font-medium text-green-700">View Calendar</span>
          </button>
          <button class="flex items-center gap-3 p-4 bg-purple-50 hover:bg-purple-100 rounded-xl transition-all duration-300">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <span class="font-medium text-purple-700">Export Timeline</span>
          </button>
          <button class="flex items-center gap-3 p-4 bg-orange-50 hover:bg-orange-100 rounded-xl transition-all duration-300">
            <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
            <span class="font-medium text-orange-700">Set Notifications</span>
          </button>
        </div>
      </div>
    </section>
  </EIULayout>
</Layout>

<script>
  // Authentication check for EIU Personnel
  document.addEventListener('DOMContentLoaded', function() {
    const token = localStorage.getItem('token');
    const userData = localStorage.getItem('user');
    
    if (!token || !userData) {
      window.location.href = '/login/lgu-pmt';
      return;
    }
    
    try {
      const user = JSON.parse(userData);
      
      // Check if user is EIU Personnel
      if (user.role !== 'EIU') {
        window.location.href = '/login/lgu-pmt';
        return;
      }
      
      console.log('EIU Reminders module loaded for user:', user.username);
      
    } catch (error) {
      console.error('Error parsing user data:', error);
      window.location.href = '/login/lgu-pmt';
    }
  });
</script> 