---
export const prerender = false;
import Layout from '../../../../layouts/Layout.astro';
import EIULayout from '../../../../components/EIULayout.astro';

const API_URL = 'http://localhost:3000/api';
let userData = null;
let loading = true;
let error = '';

// Try to fetch user data from API
try {
  const token = Astro.cookies.get('token')?.value || '';
  if (token) {
    const userRes = await fetch(`${API_URL}/auth/profile`, {
      headers: { 'Authorization': `Bearer ${token}` }
    });
    if (userRes.ok) {
      const userDataResponse = await userRes.json();
      if (userDataResponse.success && userDataResponse.user) {
        userData = userDataResponse.user;
      }
    }
  }
} catch (err) {
  console.error('Error fetching user data:', err);
  error = 'Failed to fetch user data.';
}

loading = false;
---

<Layout title="Messaging Center | EIU Dashboard">
  <EIULayout>
    <section class="p-8 bg-gradient-to-br from-gray-50 via-green-50 to-white min-h-screen">
      <!-- Header -->
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 mb-8">
        <div>
          <h1 class="text-3xl font-bold text-gray-800 mb-2">Messaging Center</h1>
          <p class="text-gray-600">Communicate with project stakeholders and team members</p>
        </div>
        <div class="flex items-center gap-3">
          <button class="px-4 py-2 bg-[#10B981] text-white rounded-lg hover:bg-[#059669] transition-colors flex items-center gap-2">
