export const prerender = false;
---
import Layout from '../../../../layouts/Layout.astro';
import ExecutiveLayout from '../../../../components/ExecutiveLayout.astro';
import executiveService from '../../../../services/executive.js';

// Fetch real heatmap data
let barangayData = [];
let departmentHeatmap = [];
let fundingSourceData = [];

try {
  // Get project locations for barangay data
  const projectLocations = await executiveService.getProjectLocations();
  barangayData = projectLocations.map(project => ({
    name: project.location || 'Unknown Location',
    projects: 1,
    status: 'active',
    budget: executiveService.formatBudget(project.totalBudget || 0),
    risk: project.overallProgress < 50 ? 'high' : project.overallProgress < 80 ? 'medium' : 'low',
    coordinates: { lat: 14.2783, lng: 121.4167 } // Default coordinates
  }));
} catch (error) {
  console.error('Error fetching barangay data:', error);
  barangayData = [];
}

try {
  // Get department performance for heatmap
  departmentHeatmap = await executiveService.getDepartmentPerformance();
} catch (error) {
  console.error('Error fetching department heatmap:', error);
  departmentHeatmap = [];
}

// Mock funding source data (can be enhanced with real backend endpoint)
fundingSourceData = [
  { source: 'Local Fund', amount: '₱85,000,000', projects: 25, color: 'blue' },
  { source: 'Provincial Fund', amount: '₱45,000,000', projects: 12, color: 'green' },
  { source: 'National Fund', amount: '₱35,000,000', projects: 8, color: 'purple' },
  { source: 'Foreign Aid', amount: '₱20,000,000', projects: 3, color: 'orange' }
];
---

<Layout title="Heatmap & Maps - Executive Viewer">
  <ExecutiveLayout>
    <section class="p-8 bg-gradient-to-br from-gray-50 to-white min-h-screen">
      <!-- Header -->
      <div class="flex items-center justify-between mb-8">
        <div>
          <h1 class="text-3xl font-bold text-gray-800 mb-2">Heatmap & Maps View</h1>
          <p class="text-gray-600">Geographic visualization of project distribution and status</p>
        </div>
        <div class="flex gap-3">
          <button class="px-4 py-2 bg-blue-100 text-blue-700 rounded-lg font-semibold hover:bg-blue-200 transition-all flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Interactive Map
          </button>
          <button class="px-6 py-2 bg-gradient-to-r from-[#3D50D7] to-[#2a3bb8] text-white rounded-xl font-semibold shadow-lg hover:from-[#2a3bb8] hover:to-[#3D50D7] transition-all duration-300">
            Export Map
          </button>
        </div>
      </div>

      <!-- Map View Controls -->
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 mb-8">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-semibold text-gray-800">Map View Options</h3>
          <div class="flex gap-2">
            <button class="px-4 py-2 bg-[#3D50D7] text-white rounded-lg text-sm font-medium">Barangay View</button>
            <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200">Department View</button>
            <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200">Funding View</button>
          </div>
        </div>
        
        <!-- Map Legend -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-green-500 rounded"></div>
            <span class="text-sm text-gray-600">Low Risk</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-yellow-500 rounded"></div>
            <span class="text-sm text-gray-600">Medium Risk</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-red-500 rounded"></div>
            <span class="text-sm text-gray-600">High Risk</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-blue-500 rounded"></div>
            <span class="text-sm text-gray-600">Active Projects</span>
          </div>
        </div>
      </div>

      <!-- Main Map Area -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
        <!-- Map Visualization -->
        <div class="lg:col-span-2 bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Santa Cruz Municipality Map</h3>
          <div class="bg-gray-100 rounded-lg h-96 flex items-center justify-center">
            <div class="text-center">
              <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <p class="text-gray-500">Interactive Map View</p>
              <p class="text-sm text-gray-400">Click on barangays to view details</p>
            </div>
          </div>
        </div>

        <!-- Barangay List -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Barangay Overview</h3>
          <div class="space-y-3">
            {barangayData.map(barangay => (
              <div class="p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-all cursor-pointer">
                <div class="flex items-center justify-between mb-2">
                  <h4 class="font-medium text-gray-800">{barangay.name}</h4>
                  <span class={`px-2 py-1 rounded-full text-xs font-semibold ${
                    barangay.risk === 'high' ? 'bg-red-100 text-red-700' :
                    barangay.risk === 'medium' ? 'bg-yellow-100 text-yellow-700' :
                    'bg-green-100 text-green-700'
                  }`}>
                    {barangay.risk} risk
                  </span>
                </div>
                <div class="grid grid-cols-2 gap-2 text-sm">
                  <div>
                    <p class="text-gray-500">Projects</p>
                    <p class="font-semibold text-gray-800">{barangay.projects}</p>
                  </div>
                  <div>
                    <p class="text-gray-500">Budget</p>
                    <p class="font-semibold text-gray-800">{barangay.budget}</p>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Department Heatmap -->
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 mb-8">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Department Project Distribution</h3>
        <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
          {departmentHeatmap.map(dept => (
            <div class="text-center p-4 bg-gray-50 rounded-lg">
              <div class="w-12 h-12 bg-[#3D50D7] rounded-full flex items-center justify-center mx-auto mb-3">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                </svg>
              </div>
              <h4 class="font-medium text-gray-800 mb-1">{dept.name}</h4>
              <p class="text-2xl font-bold text-[#3D50D7]">{dept.projects}</p>
              <p class="text-sm text-gray-600">Projects</p>
              <p class="text-xs text-gray-500 mt-1">{dept.budget}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Funding Source Visualization -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Funding Sources Chart -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Funding Sources</h3>
          <div class="space-y-4">
            {fundingSourceData.map(source => (
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class={`w-4 h-4 bg-${source.color}-500 rounded`}></div>
                  <span class="font-medium text-gray-800">{source.source}</span>
                </div>
                <div class="text-right">
                  <p class="font-semibold text-gray-800">{source.amount}</p>
                  <p class="text-sm text-gray-600">{source.projects} projects</p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Project Status Distribution -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Project Status by Location</h3>
          <div class="space-y-4">
            <div class="flex items-center justify-between p-3 bg-green-50 rounded-lg">
              <div class="flex items-center gap-3">
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                <span class="font-medium text-gray-800">Completed</span>
              </div>
              <span class="font-semibold text-green-600">18 Projects</span>
            </div>
            <div class="flex items-center justify-between p-3 bg-blue-50 rounded-lg">
              <div class="flex items-center gap-3">
                <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                <span class="font-medium text-gray-800">Ongoing</span>
              </div>
              <span class="font-semibold text-blue-600">23 Projects</span>
            </div>
            <div class="flex items-center justify-between p-3 bg-red-50 rounded-lg">
              <div class="flex items-center gap-3">
                <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                <span class="font-medium text-gray-800">Delayed</span>
              </div>
              <span class="font-semibold text-red-600">6 Projects</span>
            </div>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
              <div class="flex items-center gap-3">
                <div class="w-3 h-3 bg-gray-500 rounded-full"></div>
                <span class="font-medium text-gray-800">Pending</span>
              </div>
              <span class="font-semibold text-gray-600">5 Projects</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Map Actions</h3>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <button class="flex items-center gap-3 p-4 bg-blue-50 hover:bg-blue-100 rounded-xl transition-all duration-300">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            <span class="font-medium text-blue-700">View All Projects</span>
          </button>
          <button class="flex items-center gap-3 p-4 bg-green-50 hover:bg-green-100 rounded-xl transition-all duration-300">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            <span class="font-medium text-green-700">Generate Report</span>
          </button>
          <button class="flex items-center gap-3 p-4 bg-purple-50 hover:bg-purple-100 rounded-xl transition-all duration-300">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <span class="font-medium text-purple-700">Export Map</span>
          </button>
          <button class="flex items-center gap-3 p-4 bg-orange-50 hover:bg-orange-100 rounded-xl transition-all duration-300">
            <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"></path>
            </svg>
            <span class="font-medium text-orange-700">Print View</span>
          </button>
        </div>
      </div>
    </section>
  </ExecutiveLayout>
</Layout> 