          ctx.strokeStyle = colors.fill;
          ctx.lineWidth = 4;
          ctx.lineCap = 'round';
          ctx.beginPath();
          ctx.moveTo(x + 20, y);
          ctx.lineTo(x + (nextX - x) * progress, y);
          ctx.stroke();
          
          // Draw remaining line (dashed)
          ctx.strokeStyle = '#E5E7EB';
          ctx.lineWidth = 2;
          ctx.setLineDash([8, 4]);
          ctx.beginPath();
          ctx.moveTo(x + (nextX - x) * progress, y);
