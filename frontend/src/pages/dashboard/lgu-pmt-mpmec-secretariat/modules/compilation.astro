      ctx.lineWidth = 1;
      ctx.beginPath();
      ctx.roundRect(x - 10, legendY - 15, 120, 30, 8);
      ctx.fill();
      ctx.stroke();
      
      // Draw legend circle
      ctx.fillStyle = item.color;
      ctx.shadowColor = item.color;
      ctx.shadowBlur = 10;
