export const prerender = false;
---
import Layout from '../../../../layouts/Layout.astro';
import SysAdminLayout from '../../../../components/SysAdminLayout.astro';

// Stub data for backups
let backups = [
  { id: 1, name: 'Full Backup', type: 'full', createdAt: '2025-07-10 02:00', status: 'completed', fileSize: '120MB' },
  { id: 2, name: 'Incremental Backup', type: 'incremental', createdAt: '2025-07-12 03:00', status: 'completed', fileSize: '15MB' },
  { id: 3, name: 'Database Backup', type: 'database', createdAt: '2025-07-14 01:00', status: 'completed', fileSize: '45MB' },
  { id: 4, name: 'File Backup', type: 'files', createdAt: '2025-07-14 02:00', status: 'completed', fileSize: '78MB' },
];

// System metrics data
const systemMetrics = [
  { title: 'System Uptime', value: '99.8%', change: '+0.2%', icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z', color: 'green' },
  { title: 'CPU Usage', value: '23%', change: '-5%', icon: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z', color: 'blue' },
  { title: 'Memory Usage', value: '67%', change: '+2%', icon: 'M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4', color: 'purple' },
  { title: 'Storage Capacity', value: '78%', change: '+3%', icon: 'M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4', color: 'orange' }
];

// Maintenance schedules
const maintenanceSchedules = [
  { id: 1, title: 'Weekly Database Cleanup', type: 'database', schedule: 'Every Sunday 02:00', status: 'active', nextRun: '2025-07-20 02:00' },
  { id: 2, title: 'Monthly Full Backup', type: 'backup', schedule: '1st of month 01:00', status: 'active', nextRun: '2025-08-01 01:00' },
  { id: 3, title: 'System Health Check', type: 'health', schedule: 'Daily 06:00', status: 'active', nextRun: '2025-07-16 06:00' },
  { id: 4, title: 'Log Rotation', type: 'maintenance', schedule: 'Every Monday 03:00', status: 'paused', nextRun: '2025-07-21 03:00' }
];

let error = '';
---
<Layout title="System Backup & Maintenance">
  <SysAdminLayout>
    <style>
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      .animate-fade-in-up {
        animation: fadeInUp 0.6s ease-out forwards;
      }
      
      .animate-delay-100 { animation-delay: 0.1s; }
      .animate-delay-200 { animation-delay: 0.2s; }
      .animate-delay-300 { animation-delay: 0.3s; }
      .animate-delay-400 { animation-delay: 0.4s; }
      .animate-delay-500 { animation-delay: 0.5s; }
      .animate-delay-600 { animation-delay: 0.6s; }
      .animate-delay-700 { animation-delay: 0.7s; }
      .animate-delay-800 { animation-delay: 0.8s; }
    </style>
    
    <div class="p-8 bg-gradient-to-br from-gray-50 to-white min-h-screen">
      <!-- Header -->
      <div class="mb-8 animate-fade-in-up animate-delay-100">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">System Backup & Maintenance</h1>
        <p class="text-gray-600">Manage system backups, monitor performance, and schedule maintenance tasks</p>
      </div>

      <!-- System Metrics Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8 animate-fade-in-up animate-delay-200">
        {systemMetrics.map(metric => (
          <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 hover:shadow-xl transition-all duration-300">
            <div class="flex items-center justify-between mb-4">
              <div class={`w-12 h-12 rounded-xl flex items-center justify-center shadow-lg ${
                metric.color === 'green' ? 'bg-gradient-to-br from-green-500 to-green-600' :
                metric.color === 'blue' ? 'bg-gradient-to-br from-blue-500 to-blue-600' :
                metric.color === 'purple' ? 'bg-gradient-to-br from-purple-500 to-purple-600' :
                'bg-gradient-to-br from-orange-500 to-orange-600'
              }`}>
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={metric.icon}></path>
                </svg>
              </div>
              <span class={`text-sm font-semibold px-2 py-1 rounded-full ${
                metric.change.startsWith('+') ? 'text-green-600 bg-green-100' : 'text-red-600 bg-red-100'
              }`}>
                {metric.change}
              </span>
            </div>
            <h3 class="text-2xl font-bold text-gray-800 mb-1">{metric.value}</h3>
            <p class="text-gray-600 text-sm">{metric.title}</p>
          </div>
        ))}
      </div>

      <!-- Main Content Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        <!-- Backup Management -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 animate-fade-in-up animate-delay-300">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-gray-800 flex items-center">
              <svg class="w-5 h-5 mr-2 text-[#3D50D7]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path>
              </svg>
              Backup Management
            </h2>
            <div class="flex space-x-2">
              <button class="px-4 py-2 bg-gradient-to-r from-[#3D50D7] to-[#2a3bb8] text-white rounded-xl font-semibold shadow hover:from-[#2a3bb8] hover:to-[#3D50D7] transition-all text-sm">
                Manual Backup
              </button>
              <button class="px-4 py-2 bg-gradient-to-r from-green-500 to-green-600 text-white rounded-xl font-semibold shadow hover:from-green-600 hover:to-green-500 transition-all text-sm">
                Auto Backup
              </button>
            </div>
          </div>
          
          <!-- Backup Types -->
          <div class="grid grid-cols-2 gap-4 mb-6">
            <div class="bg-gray-50 rounded-xl p-4 border border-gray-200">
              <div class="flex items-center mb-2">
                <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path>
                </svg>
                <span class="font-semibold text-gray-800">Database</span>
              </div>
              <p class="text-sm text-gray-600">Backup database only</p>
            </div>
            <div class="bg-gray-50 rounded-xl p-4 border border-gray-200">
              <div class="flex items-center mb-2">
                <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
                </svg>
                <span class="font-semibold text-gray-800">Files</span>
              </div>
              <p class="text-sm text-gray-600">Backup uploaded files</p>
            </div>
          </div>

          <!-- Recent Backups Table -->
          <div class="overflow-x-auto rounded-xl border border-gray-100">
            <table class="min-w-full table-auto border-collapse">
              <thead>
                <tr class="bg-gray-50 text-gray-700">
                  <th class="px-4 py-3 text-left text-sm font-semibold">Name</th>
                  <th class="px-4 py-3 text-left text-sm font-semibold">Type</th>
                  <th class="px-4 py-3 text-left text-sm font-semibold">Status</th>
                  <th class="px-4 py-3 text-left text-sm font-semibold">Size</th>
                  <th class="px-4 py-3 text-left text-sm font-semibold">Actions</th>
                </tr>
              </thead>
              <tbody>
                {backups.slice(0, 3).map(backup => (
                  <tr key={backup.id} class="border-b hover:bg-gray-50 transition-all">
                    <td class="px-4 py-3 text-sm">{backup.name}</td>
                    <td class="px-4 py-3 text-sm">
                      <span class={`px-2 py-1 rounded text-xs font-semibold ${
                        backup.type === 'full' ? 'bg-blue-100 text-blue-700' :
                        backup.type === 'incremental' ? 'bg-green-100 text-green-700' :
                        backup.type === 'database' ? 'bg-purple-100 text-purple-700' :
                        'bg-orange-100 text-orange-700'
                      }`}>{backup.type}</span>
                    </td>
                    <td class="px-4 py-3 text-sm">
                      <span class={`px-2 py-1 rounded text-xs font-semibold ${backup.status === 'completed' ? 'bg-green-100 text-green-700' : 'bg-gray-200 text-gray-600'}`}>{backup.status}</span>
                    </td>
                    <td class="px-4 py-3 text-sm">{backup.fileSize}</td>
                    <td class="px-4 py-3 text-sm">
                      <button class="text-blue-600 hover:text-blue-800 mr-2 transition-all text-xs">Restore</button>
                      <button class="text-red-600 hover:text-red-800 transition-all text-xs">Delete</button>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>

        <!-- Maintenance Scheduling -->
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 animate-fade-in-up animate-delay-400">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-gray-800 flex items-center">
              <svg class="w-5 h-5 mr-2 text-[#3D50D7]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Maintenance Schedules
            </h2>
            <button class="px-4 py-2 bg-gradient-to-r from-[#3D50D7] to-[#2a3bb8] text-white rounded-xl font-semibold shadow hover:from-[#2a3bb8] hover:to-[#3D50D7] transition-all text-sm">
              Add Schedule
            </button>
          </div>
          
          <div class="space-y-4">
            {maintenanceSchedules.map(schedule => (
              <div class="bg-gray-50 rounded-xl p-4 border border-gray-200 hover:shadow-md transition-all">
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center">
                    <div class={`w-3 h-3 rounded-full mr-3 ${
                      schedule.status === 'active' ? 'bg-green-500' : 'bg-gray-400'
                    }`}></div>
                    <h3 class="font-semibold text-gray-800">{schedule.title}</h3>
                  </div>
                  <span class={`px-2 py-1 rounded text-xs font-semibold ${
                    schedule.status === 'active' ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-600'
                  }`}>{schedule.status}</span>
                </div>
                <div class="grid grid-cols-2 gap-4 text-sm text-gray-600">
                  <div>
                    <span class="font-medium">Schedule:</span> {schedule.schedule}
                  </div>
                  <div>
                    <span class="font-medium">Next Run:</span> {schedule.nextRun}
                  </div>
                </div>
                <div class="flex space-x-2 mt-3">
                  <button class="text-blue-600 hover:text-blue-800 text-xs transition-all">Edit</button>
                  <button class="text-orange-600 hover:text-orange-800 text-xs transition-all">
                    {schedule.status === 'active' ? 'Pause' : 'Resume'}
                  </button>
                  <button class="text-red-600 hover:text-red-800 text-xs transition-all">Delete</button>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Notification Management -->
      <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6 animate-fade-in-up animate-delay-500">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-xl font-bold text-gray-800 flex items-center">
            <svg class="w-5 h-5 mr-2 text-[#3D50D7]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
            User Notifications
          </h2>
          <button class="px-4 py-2 bg-gradient-to-r from-[#3D50D7] to-[#2a3bb8] text-white rounded-xl font-semibold shadow hover:from-[#2a3bb8] hover:to-[#3D50D7] transition-all text-sm">
            Send Notification
          </button>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Maintenance Notifications -->
          <div class="bg-gradient-to-r from-blue-50 to-blue-100 rounded-xl p-4 border border-blue-200">
            <div class="flex items-center mb-3">
              <svg class="w-6 h-6 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <h3 class="font-semibold text-blue-800">Maintenance Alerts</h3>
            </div>
            <p class="text-sm text-blue-700 mb-3">Notify users about scheduled maintenance</p>
            <div class="space-y-2">
              <label class="flex items-center">
                <input type="checkbox" checked class="rounded text-blue-600">
                <span class="ml-2 text-sm text-blue-700">Email notifications</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" checked class="rounded text-blue-600">
                <span class="ml-2 text-sm text-blue-700">In-app notifications</span>
              </label>
            </div>
          </div>

          <!-- Backup Notifications -->
          <div class="bg-gradient-to-r from-green-50 to-green-100 rounded-xl p-4 border border-green-200">
            <div class="flex items-center mb-3">
              <svg class="w-6 h-6 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path>
              </svg>
              <h3 class="font-semibold text-green-800">Backup Status</h3>
            </div>
            <p class="text-sm text-green-700 mb-3">Notify admins about backup completion</p>
            <div class="space-y-2">
              <label class="flex items-center">
                <input type="checkbox" checked class="rounded text-green-600">
                <span class="ml-2 text-sm text-green-700">Successful backups</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" checked class="rounded text-green-600">
                <span class="ml-2 text-sm text-green-700">Failed backups</span>
              </label>
            </div>
          </div>

          <!-- System Health Notifications -->
          <div class="bg-gradient-to-r from-purple-50 to-purple-100 rounded-xl p-4 border border-purple-200">
            <div class="flex items-center mb-3">
              <svg class="w-6 h-6 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
              <h3 class="font-semibold text-purple-800">System Health</h3>
            </div>
            <p class="text-sm text-purple-700 mb-3">Alert on system issues</p>
            <div class="space-y-2">
              <label class="flex items-center">
                <input type="checkbox" checked class="rounded text-purple-600">
                <span class="ml-2 text-sm text-purple-700">High resource usage</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" checked class="rounded text-purple-600">
                <span class="ml-2 text-sm text-purple-700">Storage warnings</span>
              </label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </SysAdminLayout>
</Layout> 