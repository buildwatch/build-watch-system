<script>
  document.addEventListener('DOMContentLoaded', function() {
    const token = localStorage.getItem('token');
    const userData = localStorage.getItem('user');
    
    if (!token || !userData) {
      window.location.href = '/login/lgu-pmt';
      return;
    }
    
    try {
      const user = JSON.parse(userData);
      if (user.role !== 'LGU-PMT') {
        window.location.href = '/login/lgu-pmt';
        return;
      }
    } catch (error) {
      console.error('Error parsing user data:', error);
      window.location.href = '/login/lgu-pmt';
    }

    // Add interactive functionality
    const buttons = document.querySelectorAll('button');
    buttons.forEach(button => {
      if (button.textContent.includes('Export Report')) {
        button.addEventListener('click', function() {
          console.log('Exporting policy report...');
          alert('Policy report exported successfully!');
        });
      }
      if (button.textContent.includes('Generate Insights')) {
        button.addEventListener('click', function() {
          console.log('Generating policy insights...');
          alert('Policy insights generated successfully!');
        });
      }
    });

    // Add chart animations and interactions
    const progressBars = document.querySelectorAll('.bg-gray-200 .rounded-full');
    progressBars.forEach(bar => {
      const width = bar.style.width;
      bar.style.width = '0%';
      setTimeout(() => {
        bar.style.transition = 'width 1s ease-in-out';
        bar.style.width = width;
      }, 500);
    });
  });
</script> 