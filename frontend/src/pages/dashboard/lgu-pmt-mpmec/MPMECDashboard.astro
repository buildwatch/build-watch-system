  // ‚úÖ NEW: Helper function to convert image URL to data URL
  async function convertImageToDataURL(serverUrl) {
    try {
      console.log('üîÑ MPMEC Dashboard: Converting server URL to data URL:', serverUrl);
      
      const response = await fetch(serverUrl, { 
        mode: 'cors',
        credentials: 'same-origin',
        headers: {
          'Cache-Control': 'no-cache'
        }
      });
      
      if (response.ok) {
        const blob = await response.blob();
        const dataUrl = await new Promise((resolve, reject) => {
          const reader = new FileReader();
          reader.onloadend = () => resolve(reader.result);
          reader.onerror = reject;
          reader.readAsDataURL(blob);
        });
        console.log('‚úÖ MPMEC Dashboard: Successfully converted to data URL');
        return dataUrl;
      } else {
        console.log('‚ùå MPMEC Dashboard: Failed to fetch image:', response.status, response.statusText);
      }
    } catch (error) {
      console.log('‚ö†Ô∏è MPMEC Dashboard: Failed to convert to data URL:', error);
    }
    return null;
  }
