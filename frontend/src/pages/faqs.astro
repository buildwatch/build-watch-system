---
import Layout from "../layouts/Layout.astro";
import TopBar from "../components/TopBar.astro";
import LGUFooter from "../components/LGUFooter.astro";
---
<Layout title="FAQs | Build Watch LGU" description="Frequently asked questions about Build Watch and LGU project monitoring.">
  <TopBar />
  <main class="flex flex-col items-center w-full px-4 pt-32 pb-20 bg-gradient-to-br from-gray-50 via-blue-50 to-white min-h-screen relative overflow-hidden fade-in-faqs">
    <!-- Enhanced Background Elements -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-20 left-10 w-32 h-32 bg-blue-200/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute top-40 right-20 w-24 h-24 bg-purple-200/20 rounded-full blur-2xl animate-pulse" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-32 left-1/3 w-40 h-40 bg-indigo-200/15 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    </div>

    <!-- Enhanced Hero Section -->
    <div class="relative z-10 text-center mb-16 mt-8">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-500/10 text-blue-600 font-semibold rounded-full mb-6 text-sm animate-fade-in-up">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
        </svg>
        Frequently Asked Questions
      </div>
      
      <h1 class="text-6xl md:text-7xl font-black text-transparent bg-clip-text bg-gradient-to-r from-blue-600 via-blue-700 to-purple-600 leading-tight mb-8 animate-fade-in-up" style="animation-delay: 0.1s;">
        Frequently Asked Questions
      </h1>
      
      <p class="text-xl text-blue-600 max-w-4xl mx-auto leading-relaxed animate-fade-in-up" style="animation-delay: 0.2s;">
        Find answers to common questions about the Build Watch system and LGU project monitoring
      </p>
    </div>
    <!-- Enhanced Search Section -->
    <div class="relative z-10 w-full max-w-5xl mb-12">
      <div class="bg-gradient-to-br from-white/95 to-blue-50/90 backdrop-blur-sm rounded-3xl p-8 shadow-2xl border border-blue-100/50 hover:shadow-3xl transition-all duration-500 relative animate-fade-in-up" style="animation-delay: 0.3s;">
        <!-- Decorative Elements -->
        <div class="absolute -top-6 -right-6 w-20 h-20 bg-gradient-to-br from-blue-400/20 to-purple-400/20 rounded-full blur-xl"></div>
        <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-gradient-to-br from-indigo-400/15 to-blue-400/15 rounded-full blur-lg"></div>
        
        <div class="relative z-10">
          <div class="flex items-center gap-4 mb-8">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-600 to-purple-600 rounded-2xl flex items-center justify-center shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <div>
              <h2 class="text-blue-700 font-black text-2xl">Search FAQs</h2>
              <p class="text-blue-600/70 text-sm font-medium">Find answers quickly and efficiently</p>
            </div>
          </div>
          
          <div class="flex flex-col md:flex-row gap-6 items-end">
            <div class="flex-1">
              <label class="block text-blue-800 font-bold mb-3 flex items-center gap-2">
                <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
                Search Term
              </label>
              <div class="relative group">
                <div class="absolute inset-0 bg-gradient-to-r from-blue-400/20 to-purple-400/20 rounded-2xl blur opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <input 
                  type="text" 
                  id="faq-search" 
                  placeholder="Search for questions, topics, or keywords..." 
                  class="relative w-full px-5 py-4 border-2 border-blue-200/50 rounded-2xl bg-white/80 backdrop-blur-sm text-blue-900 placeholder-blue-400 focus:ring-4 focus:ring-blue-500/20 focus:border-blue-500 transition-all duration-300 hover:border-blue-400 hover:bg-white shadow-lg focus:shadow-xl" 
                />
              </div>
            </div>
            
            <button 
              id="search-btn"
              class="group relative px-8 py-4 bg-gradient-to-r from-blue-600 via-purple-600 to-blue-600 text-white font-black rounded-2xl shadow-2xl hover:shadow-3xl transform hover:scale-105 hover:-translate-y-1 transition-all duration-500 flex items-center gap-3 overflow-hidden"
            >
              <!-- Button Background Animation -->
              <div class="absolute inset-0 bg-gradient-to-r from-purple-600 via-blue-600 to-purple-600 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              <div class="absolute inset-0 bg-gradient-to-r from-blue-400 to-purple-400 blur-xl opacity-0 group-hover:opacity-30 transition-opacity duration-500"></div>
              
              <!-- Button Content -->
              <div class="relative flex items-center gap-3">
                <svg class="w-5 h-5 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
                <span>Search</span>
              </div>
            </button>
          </div>
          
          <!-- Quick Search Tips -->
          <div class="flex items-center gap-6 mt-6 text-sm text-blue-600/70">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
              <span>Type keywords</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
              </svg>
              <span>Browse categories</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
              <span>Press ESC to clear</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Enhanced FAQ Container -->
    <div class="relative z-10 w-full max-w-6xl space-y-12" id="faq-container">
      <!-- General Questions Category - Enhanced -->
      <div class="faq-category group bg-gradient-to-br from-white/95 to-emerald-50/90 backdrop-blur-sm rounded-3xl shadow-2xl border border-emerald-100/50 hover:shadow-3xl hover:border-emerald-200/60 transition-all duration-500 relative animate-fade-in-up" style="animation-delay: 0.4s;">
        <!-- Decorative Elements -->
        <div class="absolute -top-4 -right-4 w-16 h-16 bg-gradient-to-br from-emerald-400/20 to-teal-400/20 rounded-full blur-xl group-hover:scale-110 transition-transform duration-500"></div>
        <div class="absolute -bottom-6 -left-6 w-20 h-20 bg-gradient-to-br from-teal-400/15 to-emerald-400/15 rounded-full blur-2xl group-hover:scale-110 transition-transform duration-500"></div>
        
        <div class="relative z-10 p-8">
          <div class="flex items-center gap-4 mb-8">
            <div class="w-14 h-14 bg-gradient-to-br from-emerald-600 to-teal-600 rounded-3xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <h2 class="text-emerald-700 font-black text-3xl">General Questions</h2>
              <p class="text-emerald-600/70 text-sm font-medium">Basic information about Build Watch</p>
            </div>
          </div>
          <div class="space-y-6">
            <!-- Enhanced FAQ Item 1 -->
            <div class="faq-item group/item bg-white/80 backdrop-blur-sm border-2 border-emerald-200/50 rounded-2xl overflow-hidden hover:border-emerald-400/80 hover:shadow-xl transition-all duration-500 relative">
              <div class="absolute inset-0 bg-gradient-to-r from-emerald-50/50 to-teal-50/50 opacity-0 group-hover/item:opacity-100 transition-opacity duration-300"></div>
              
              <button class="faq-question relative w-full flex justify-between items-center p-6 text-left hover:bg-emerald-50/50 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-emerald-500/20 group" aria-expanded="false">
                <div class="flex items-center gap-4">
                  <div class="w-10 h-10 bg-emerald-100 rounded-xl flex items-center justify-center group-hover:bg-emerald-200 transition-colors duration-300">
                    <svg class="w-5 h-5 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                  <span class="text-xl font-black text-emerald-800 group-hover:text-emerald-600 transition-colors duration-300">What is Build Watch?</span>
                </div>
                <div class="flex items-center gap-2">
                  <div class="px-3 py-1 bg-emerald-100 text-emerald-700 text-xs font-bold rounded-full">Essential</div>
                  <svg class="faq-icon w-8 h-8 p-1.5 bg-emerald-100 text-emerald-600 rounded-xl transform transition-all duration-300 group-hover:bg-emerald-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                </div>
              </button>
              
              <div class="faq-answer max-h-0 overflow-hidden transition-all duration-500 ease-in-out">
                <div class="p-6 pt-0">
                  <div class="bg-emerald-50/80 backdrop-blur-sm rounded-2xl p-6 border border-emerald-200/50">
                    <p class="text-emerald-800 leading-relaxed text-lg mb-4">
                      Build Watch is a comprehensive project monitoring and evaluation system developed for the Municipality of Santa Cruz, Laguna. It provides real-time tracking of infrastructure projects and social development programs to ensure transparency and accountability in local governance.
                    </p>
                    <div class="flex items-center gap-4 text-sm text-emerald-600">
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                        <span>Real-time tracking</span>
                      </div>
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                        <span>Transparency focus</span>
                      </div>
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                        <span>Multi-project support</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          
            <!-- Enhanced FAQ Item 2 -->
            <div class="faq-item group/item bg-white/80 backdrop-blur-sm border-2 border-emerald-200/50 rounded-2xl overflow-hidden hover:border-emerald-400/80 hover:shadow-xl transition-all duration-500 relative">
              <div class="absolute inset-0 bg-gradient-to-r from-emerald-50/50 to-teal-50/50 opacity-0 group-hover/item:opacity-100 transition-opacity duration-300"></div>
              
              <button class="faq-question relative w-full flex justify-between items-center p-6 text-left hover:bg-emerald-50/50 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-emerald-500/20 group" aria-expanded="false">
                <div class="flex items-center gap-4">
                  <div class="w-10 h-10 bg-emerald-100 rounded-xl flex items-center justify-center group-hover:bg-emerald-200 transition-colors duration-300">
                    <svg class="w-5 h-5 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                  <span class="text-xl font-black text-emerald-800 group-hover:text-emerald-600 transition-colors duration-300">Who can access Build Watch?</span>
                </div>
                <div class="flex items-center gap-2">
                  <div class="px-3 py-1 bg-emerald-100 text-emerald-700 text-xs font-bold rounded-full">Access</div>
                  <svg class="faq-icon w-8 h-8 p-1.5 bg-emerald-100 text-emerald-600 rounded-xl transform transition-all duration-300 group-hover:bg-emerald-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                </div>
              </button>
              
              <div class="faq-answer max-h-0 overflow-hidden transition-all duration-500 ease-in-out">
                <div class="p-6 pt-0">
                  <div class="bg-emerald-50/80 backdrop-blur-sm rounded-2xl p-6 border border-emerald-200/50">
                    <p class="text-emerald-800 leading-relaxed text-lg mb-4">
                      Build Watch is accessible to four main user groups: LGU-PMT (Project Monitoring Team), EIU (External Implementing Units), EMS (External Monitoring Stakeholders), and IU (Internal Units). Each group has specific access levels and functionalities.
                    </p>
                    <div class="grid grid-cols-2 gap-3 text-sm text-emerald-600">
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                        </svg>
                        <span>LGU-PMT Team</span>
                      </div>
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                        </svg>
                        <span>External Units (EIU)</span>
                      </div>
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                        </svg>
                        <span>Monitoring Stakeholders</span>
                      </div>
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                        </svg>
                        <span>Internal Units</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Enhanced FAQ Item 3 -->
            <div class="faq-item group/item bg-white/80 backdrop-blur-sm border-2 border-emerald-200/50 rounded-2xl overflow-hidden hover:border-emerald-400/80 hover:shadow-xl transition-all duration-500 relative">
              <div class="absolute inset-0 bg-gradient-to-r from-emerald-50/50 to-teal-50/50 opacity-0 group-hover/item:opacity-100 transition-opacity duration-300"></div>
              
              <button class="faq-question relative w-full flex justify-between items-center p-6 text-left hover:bg-emerald-50/50 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-emerald-500/20 group" aria-expanded="false">
                <div class="flex items-center gap-4">
                  <div class="w-10 h-10 bg-emerald-100 rounded-xl flex items-center justify-center group-hover:bg-emerald-200 transition-colors duration-300">
                    <svg class="w-5 h-5 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                  <span class="text-xl font-black text-emerald-800 group-hover:text-emerald-600 transition-colors duration-300">Is Build Watch free to use?</span>
                </div>
                <div class="flex items-center gap-2">
                  <div class="px-3 py-1 bg-emerald-100 text-emerald-700 text-xs font-bold rounded-full">Pricing</div>
                  <svg class="faq-icon w-8 h-8 p-1.5 bg-emerald-100 text-emerald-600 rounded-xl transform transition-all duration-300 group-hover:bg-emerald-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                </div>
              </button>
              
              <div class="faq-answer max-h-0 overflow-hidden transition-all duration-500 ease-in-out">
                <div class="p-6 pt-0">
                  <div class="bg-emerald-50/80 backdrop-blur-sm rounded-2xl p-6 border border-emerald-200/50">
                    <p class="text-emerald-800 leading-relaxed text-lg mb-4">
                      Yes, Build Watch is a free public service provided by the LGU of Santa Cruz, Laguna. There are no fees or charges for accessing project information and monitoring data.
                    </p>
                    <div class="flex items-center gap-6 text-sm text-emerald-600">
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                        <span>100% Free</span>
                      </div>
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                        <span>No hidden fees</span>
                      </div>
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                        <span>Public service</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      

      
      <!-- Project Monitoring Category - Enhanced -->
      <div class="faq-category group bg-gradient-to-br from-white/95 to-purple-50/90 backdrop-blur-sm rounded-3xl shadow-2xl border border-purple-100/50 hover:shadow-3xl hover:border-purple-200/60 transition-all duration-500 relative animate-fade-in-up" style="animation-delay: 0.5s;">
        <!-- Decorative Elements -->
        <div class="absolute -top-4 -right-4 w-16 h-16 bg-gradient-to-br from-purple-400/20 to-indigo-400/20 rounded-full blur-xl group-hover:scale-110 transition-transform duration-500"></div>
        <div class="absolute -bottom-6 -left-6 w-20 h-20 bg-gradient-to-br from-indigo-400/15 to-purple-400/15 rounded-full blur-2xl group-hover:scale-110 transition-transform duration-500"></div>
        
        <div class="relative z-10 p-8">
          <div class="flex items-center gap-4 mb-8">
            <div class="w-14 h-14 bg-gradient-to-br from-purple-600 to-indigo-600 rounded-3xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
              </svg>
            </div>
