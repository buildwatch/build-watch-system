---
// Splash Screen with Advanced Animations
---
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Build Watch | Loading</title>
  <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
  <style>
    :root {
      --main-color: #0988FF;
      --duration: 1.5s;
      --container-size: 300px;
      --box-size: 32px;
      --box-border-radius: 15%;
      --path: #EB2929;
      --dot: #297CEB;
      --text-animation-duration: 3s;
    }

    html, body {
      margin: 0;
      padding: 0;
      height: 100vh;
      width: 100vw;
      min-height: 100vh;
      min-width: 100vw;
      overflow: hidden;
      font-family: 'Montserrat', sans-serif;
      display: flex;
      flex-direction: column;
      background: linear-gradient(to bottom, #ff5a4d 0%, #ffffff 35%, #ffffff 65%, #4d8cff 100%);
      position: relative;
    }

    .center {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
      z-index: 1;
    }

    .bottom {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-bottom: 30px;
    }

    /* BUILD-WATCH loader */
    .loading-screen {
      display: flex;
      flex-wrap: wrap;
      gap: 12px;
      justify-content: center;
      align-items: center;
    }

    .loader {
      width: 64px;
      height: 64px;
      position: relative;
    }

    .loader::before {
      content: '';
      width: 6px;
      height: 6px;
      border-radius: 50%;
      background: var(--dot);
      position: absolute;
      top: 40px;
      left: 28px;
      transform: translate(-24px, -24px);
      animation: dotRect var(--text-animation-duration) cubic-bezier(0.785, 0.135, 0.15, 0.86) infinite;
    }

    .loader svg {
      width: 100%;
      height: 100%;
      display: block;
    }

    .loader svg text {
      fill: none;
      stroke: var(--path);
      stroke-width: 4px;
      stroke-linecap: round;
      stroke-linejoin: round;
      font-size: 60px;
      font-family: Arial, sans-serif;
      dominant-baseline: middle;
      text-anchor: middle;
      x: 50%;
      y: 50%;
      stroke-dasharray: 192 64 192 64;
      stroke-dashoffset: 0;
      animation: pathRect var(--text-animation-duration) cubic-bezier(0.785, 0.135, 0.15, 0.86) infinite;
    }

    @keyframes pathRect {
      0%   { stroke-dashoffset: 0; }
      25%  { stroke-dashoffset: 64; }
      50%  { stroke-dashoffset: 128; }
      75%  { stroke-dashoffset: 192; }
      100% { stroke-dashoffset: 256; }
    }

    @keyframes dotRect {
      0%   { transform: translate(-24px, -24px); }
      25%  { transform: translate(0, 0); }
      50%  { transform: translate(24px, -24px); }
      75%  { transform: translate(0, -48px); }
      100% { transform: translate(-24px, -24px); }
    }

    /* Now Loading Text and Boxes */
    .now-loading-text {
      color: var(--main-color);
      font-size: 26px;
      font-weight: 800;
      margin-bottom: 10px;
    }

    .box-container {
      width: var(--container-size);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .box {
      width: var(--box-size);
      height: var(--box-size);
      position: relative;
      border-radius: var(--box-border-radius);
      transform-origin: -50% center;
    }

    .box::after {
      content: '';
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      right: 0;
      border-radius: var(--box-border-radius);
      box-shadow: 0px 0px 10px 0px rgba(28, 159, 255, 0.4);
    }

    .box:nth-child(1) {
      animation: slide var(--duration) ease-in-out infinite alternate;
    }
    .box:nth-child(1)::after {
      animation: color-change var(--duration) ease-in-out infinite alternate;
      background-color: #1795FF;
    }

    .box:nth-child(2) {
      animation: flip-1 var(--duration) ease-in-out infinite alternate;
    }
    .box:nth-child(2)::after {
      animation: squidge-1 var(--duration) ease-in-out infinite alternate;
      background-color: #1C9FFF;
    }

    .box:nth-child(3) {
      animation: flip-2 var(--duration) ease-in-out infinite alternate;
    }
    .box:nth-child(3)::after {
      animation: squidge-2 var(--duration) ease-in-out infinite alternate;
      background-color: #1FB1FD;
    }

    .box:nth-child(4) {
      animation: flip-3 var(--duration) ease-in-out infinite alternate;
    }
    .box:nth-child(4)::after {
      animation: squidge-3 var(--duration) ease-in-out infinite alternate;
      background-color: #22C7FB;
    }

    .box:nth-child(5) {
      animation: flip-4 var(--duration) ease-in-out infinite alternate;
    }
    .box:nth-child(5)::after {
      animation: squidge-4 var(--duration) ease-in-out infinite alternate;
      background-color: #23D3FB;
    }

    .box:nth-child(6) {
      animation: flip-5 var(--duration) ease-in-out infinite alternate;
    }
    .box:nth-child(6)::after {
      animation: squidge-5 var(--duration) ease-in-out infinite alternate;
      background-color: #47E5FF;
    }

    @keyframes slide {
      0%   { transform: translateX(0vw); }
      100% { transform: translateX(calc(var(--container-size) - (var(--box-size) * 1.25))); }
    }

    @keyframes color-change {
      0%   { background-color: #1795FF; }
      100% { background-color: #23D3FB; }
    }

    @keyframes flip-1 {
      0%, 15% { transform: rotate(0); }
      35%, 100% { transform: rotate(-180deg); }
    }

    @keyframes squidge-1 {
      5% { transform: scaleX(1) scaleY(1); }
      15% { transform: scaleX(1.3) scaleY(0.7); }
      25% { transform: scaleX(0.8) scaleY(1.4); }
      55% { transform: scaleX(1) scaleY(1); }
    }

    @keyframes flip-2 {
      0%, 30% { transform: rotate(0); }
      50%, 100% { transform: rotate(-180deg); }
    }

    @keyframes squidge-2 {
      20% { transform: scaleX(1) scaleY(1); }
      30% { transform: scaleX(1.3) scaleY(0.7); }
      40% { transform: scaleX(0.8) scaleY(1.4); }
      70% { transform: scaleX(1) scaleY(1); }
    }

    @keyframes flip-3 {
      0%, 45% { transform: rotate(0); }
      65%, 100% { transform: rotate(-180deg); }
    }

    @keyframes squidge-3 {
      35% { transform: scaleX(1) scaleY(1); }
      45% { transform: scaleX(1.3) scaleY(0.7); }
      55% { transform: scaleX(0.8) scaleY(1.4); }
      85% { transform: scaleX(1) scaleY(1); }
    }

    @keyframes flip-4 {
      0%, 60% { transform: rotate(0); }
      80%, 100% { transform: rotate(-180deg); }
    }

    @keyframes squidge-4 {
      50% { transform: scaleX(1) scaleY(1); }
      60% { transform: scaleX(1.3) scaleY(0.7); }
      70% { transform: scaleX(0.8) scaleY(1.4); }
      100% { transform: scaleX(1) scaleY(1); }
    }

    @keyframes flip-5 {
      0%, 75% { transform: rotate(0); }
      95%, 100% { transform: rotate(-180deg); }
    }

    @keyframes squidge-5 {
      65% { transform: scaleX(1) scaleY(1); }
      75% { transform: scaleX(1.3) scaleY(0.7); }
      85% { transform: scaleX(0.8) scaleY(1.4); }
      100% { transform: scaleX(1) scaleY(1); }
    }

    .background-wrapper {
      position: absolute;
      inset: 0;
      background: url('/splash-screen-logo.png') no-repeat center center;
      background-size: contain;
      pointer-events: none;
      z-index: 0;
      opacity: 0.1;
    }

    /* Fade out animation for transition */
    .fade-out {
      animation: fadeOut 0.5s ease-in-out forwards;
    }

    @keyframes fadeOut {
      from { opacity: 1; }
      to { opacity: 0; }
    }
  </style>
</head>
<body>
  <div class="background-wrapper"></div>
  <div class="center">
    <div class="loading-screen">
      <div class="loader"><svg viewBox="0 0 80 80"><text x="50%" y="50%">B</text></svg></div>
      <div class="loader"><svg viewBox="0 0 80 80"><text x="50%" y="50%">U</text></svg></div>
      <div class="loader"><svg viewBox="0 0 80 80"><text x="50%" y="50%">I</text></svg></div>
      <div class="loader"><svg viewBox="0 0 80 80"><text x="50%" y="50%">L</text></svg></div>
      <div class="loader"><svg viewBox="0 0 80 80"><text x="50%" y="50%">D</text></svg></div>
      <div class="loader"><svg viewBox="0 0 80 80"><text x="50%" y="50%">-</text></svg></div>
      <div class="loader"><svg viewBox="0 0 80 80"><text x="50%" y="50%">W</text></svg></div>
      <div class="loader"><svg viewBox="0 0 80 80"><text x="50%" y="50%">A</text></svg></div>
      <div class="loader"><svg viewBox="0 0 80 80"><text x="50%" y="50%">T</text></svg></div>
      <div class="loader"><svg viewBox="0 0 80 80"><text x="50%" y="50%">C</text></svg></div>
      <div class="loader"><svg viewBox="0 0 80 80"><text x="50%" y="50%">H</text></svg></div>
    </div>
  </div>

  <div class="bottom">
    <div class="now-loading-text">NOW LOADING</div>
    <div class="box-container">
      <div class="box"></div>
      <div class="box"></div>
      <div class="box"></div>
      <div class="box"></div>
      <div class="box"></div>
      <div class="box"></div>
    </div>
  </div>

  <script>
    // Auto-redirect after animation completes
    setTimeout(() => {
      document.body.classList.add('fade-out');
      setTimeout(() => {
        window.location.href = '/';
      }, 500);
    }, 5000); // 5 seconds total display time

    // Allow manual skip with any key press or click
    document.addEventListener('keydown', () => {
      document.body.classList.add('fade-out');
      setTimeout(() => {
        window.location.href = '/';
      }, 500);
    });

    document.addEventListener('click', () => {
      document.body.classList.add('fade-out');
      setTimeout(() => {
        window.location.href = '/';
      }, 500);
    });
  </script>
</body>
</html> 