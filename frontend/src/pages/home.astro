  <!-- Enhanced Scroll Progress Navigation JavaScript -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Government slideshow
      (function initGovSlideshow(){
        const track = document.getElementById('gov-slideshow');
        if (!track) return;
        const slides = Array.from(track.children);
        const total = slides.length;
        const nextBtn = document.getElementById('gov-next');
        const prevBtn = document.getElementById('gov-prev');
        const dotsWrap = document.getElementById('gov-dots');
        const dots = dotsWrap ? Array.from(dotsWrap.querySelectorAll('.gov-dot')) : [];
        const progressBar = document.getElementById('gov-slide-progress');

        let index = 0;
        let timer = null;
        const durationMs = 5000;

        function updateUI(){
          const offset = -index * 100;
          track.style.transform = `translateX(${offset}%)`;
          dots.forEach((d, i) => d.style.backgroundColor = i === index ? 'rgba(79,70,229,1)' : 'rgba(165,180,252,0.6)');
          if (progressBar){
            // Reset progress animation cleanly for every slide
            progressBar.style.transition = 'none';
            progressBar.style.width = '0%';
            // Force reflow to restart transition
            void progressBar.offsetWidth;
            progressBar.style.transition = `width ${durationMs}ms linear`;
            requestAnimationFrame(() => { progressBar.style.width = '100%'; });
          }
        }

        function next(){ index = (index + 1) % total; updateUI(); restart(); }
        function prev(){ index = (index - 1 + total) % total; updateUI(); restart(); }
        function go(i){ index = (i+total)%total; updateUI(); restart(); }

        function restart(){
          if (timer) clearInterval(timer);
          timer = setInterval(next, durationMs);
        }

        dots.forEach((dot, i) => dot.addEventListener('click', () => go(i)));
        if (nextBtn) nextBtn.addEventListener('click', next);
        if (prevBtn) prevBtn.addEventListener('click', prev);

        updateUI();
        restart();
      })();
      const progressFill = document.getElementById('progress-fill');
      // Horizontal progress only (no glow/percentage)
      const checkpoints = document.querySelectorAll('.nav-checkpoint');
      const scrollNav = document.getElementById('scroll-progress-nav');
      
      // Section positions for smooth scrolling
      const sections = {
        hero: document.getElementById('hero'),
        government: document.getElementById('government'),
        barangays: document.getElementById('barangays'),
        about: document.getElementById('about'),
        map: document.getElementById('map'),
        featured: document.getElementById('featured'),
        articles: document.getElementById('articles')
      };

      // Smooth scroll function with easing
      function smoothScrollTo(target) {
        const targetPosition = target.offsetTop - 100;
        const startPosition = window.pageYOffset;
        const distance = targetPosition - startPosition;
        const duration = 1000;
        let start = null;

        function ease(t, b, c, d) {
          t /= d/2;
          if (t < 1) return c/2*t*t + b;
          t--;
          return -c/2 * (t*(t-2) - 1) + b;
        }

        function animation(currentTime) {
          if (start === null) start = currentTime;
          const timeElapsed = currentTime - start;
          const run = ease(timeElapsed, startPosition, distance, duration);
          window.scrollTo(0, run);
          if (timeElapsed < duration) requestAnimationFrame(animation);
        }
        requestAnimationFrame(animation);
      }

      // Add click handlers to checkpoints
      checkpoints.forEach(checkpoint => {
        checkpoint.addEventListener('click', function() {
          const sectionName = this.getAttribute('data-section');
          const targetSection = sections[sectionName];
          if (targetSection) {
            smoothScrollTo(targetSection);
          }
        });
      });

      // Update progress on scroll
      function updateScrollProgress() {
        const scrollTop = window.pageYOffset;
        // Calculate segment-based progress across the defined sections
        const order = ['hero','government','barangays','about','map','featured','articles'];
        const offsets = order.map(key => sections[key]?.offsetTop || 0);
        const anchor = scrollTop + window.innerHeight * 0.35; // reading position
        let idx = 0;
        for (let i = 0; i < offsets.length; i++) {
          if (anchor >= offsets[i]) idx = i;
        }
        const curTop = offsets[idx];
        const nextTop = offsets[Math.min(idx + 1, offsets.length - 1)];
        const denom = Math.max(1, nextTop - curTop);
        const segProgress = Math.max(0, Math.min(1, (anchor - curTop) / denom));
        const progress = ((idx + segProgress) / (order.length - 1)) * 100;
        progressFill.style.width = progress + '%';

        // Active/inactive states
        checkpoints.forEach((checkpoint, i) => {
          checkpoint.classList.remove('active','completed');
          if (i < idx) checkpoint.classList.add('completed');
          if (i === idx) checkpoint.classList.add('active');
        });

        // Always visible on desktop
        scrollNav.classList.add('opacity-100');
        scrollNav.classList.remove('opacity-0');
      }

      // Enhanced scroll handler with throttling
      let ticking = false;
      function requestTick() {
        if (!ticking) {
          requestAnimationFrame(updateScrollProgress);
          ticking = true;
          setTimeout(() => { ticking = false; }, 16); // 60fps throttling
        }
      }

      // Initialize
      updateScrollProgress();
      
      // Add scroll event listener
      window.addEventListener('scroll', requestTick, { passive: true });

      // Add resize handler for responsive behavior
      window.addEventListener('resize', function() {
        setTimeout(updateScrollProgress, 100);
      });

      // Enhanced hover effects for checkpoints
      checkpoints.forEach(checkpoint => {
        const circle = checkpoint.querySelector('.checkpoint-circle');
        const icon = circle.querySelector('svg');
        
        checkpoint.addEventListener('mouseenter', function() {
          circle.style.transform = 'scale(1.15) rotate(5deg)';
          circle.style.transition = 'all 0.3s cubic-bezier(0.4, 0, 0.2, 1)';
          if (icon) {
            icon.style.transform = 'scale(1.1)';
            icon.style.transition = 'all 0.3s ease';
          }
        });
        
        checkpoint.addEventListener('mouseleave', function() {
          const isActive = checkpoint.classList.contains('active');
          const isCompleted = checkpoint.classList.contains('completed');
          
          if (isActive) {
            circle.style.transform = 'scale(1.3)';
          } else if (isCompleted) {
            circle.style.transform = 'scale(1.1)';
          } else {
            circle.style.transform = 'scale(1)';
          }
          circle.style.transition = 'all 0.3s ease-out';
          
          if (icon) {
            icon.style.transform = 'scale(1)';
            icon.style.transition = 'all 0.3s ease';
          }
        });

        // Add click handler for smooth scrolling
        checkpoint.addEventListener('click', function(e) {
          e.preventDefault();
          const sectionId = checkpoint.getAttribute('data-section');
          const targetSection = sections[sectionId];
          
          if (targetSection) {
            // Smooth scroll to section
            targetSection.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
            
            // Add visual feedback
            circle.style.transform = 'scale(0.95)';
            setTimeout(() => {
              const isActive = checkpoint.classList.contains('active');
              const isCompleted = checkpoint.classList.contains('completed');
              
              if (isActive) {
                circle.style.transform = 'scale(1.3)';
              } else if (isCompleted) {
                circle.style.transform = 'scale(1.1)';
              } else {
                circle.style.transform = 'scale(1)';
              }
            }, 150);
          }
        });
      });

      // Add keyboard navigation support
      document.addEventListener('keydown', function(e) {
        if (e.key === 'ArrowUp' || e.key === 'ArrowDown') {
          e.preventDefault();
          const currentActive = document.querySelector('.nav-checkpoint.active');
          if (currentActive) {
            const allCheckpoints = Array.from(checkpoints);
            const currentIndex = allCheckpoints.indexOf(currentActive);
            let targetIndex;
            
            if (e.key === 'ArrowUp' && currentIndex > 0) {
              targetIndex = currentIndex - 1;
            } else if (e.key === 'ArrowDown' && currentIndex < allCheckpoints.length - 1) {
              targetIndex = currentIndex + 1;
            }
            
            if (targetIndex !== undefined) {
              const targetCheckpoint = allCheckpoints[targetIndex];
              const sectionName = targetCheckpoint.getAttribute('data-section');
              const targetSection = sections[sectionName];
              if (targetSection) {
                smoothScrollTo(targetSection);
              }
            }
          }
        }
      });
    });
