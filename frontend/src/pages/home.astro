        console.log(` Force setting bar ${index} to ${progress}% with red background`);
        
        // Force all styles with !important
        bar.style.setProperty('width', `${progress}%`, 'important');
        bar.style.setProperty('background-color', '#ef4444', 'important');
        bar.style.setProperty('display', 'block', 'important');
        bar.style.setProperty('visibility', 'visible', 'important');
        bar.style.setProperty('height', '10px', 'important');
        bar.style.setProperty('min-height', '10px', 'important');
        bar.style.setProperty('opacity', '1', 'important');
        bar.style.setProperty('z-index', '10', 'important');
        bar.style.setProperty('position', 'relative', 'important');
        
        console.log(` Bar ${index} forced styles:`, {
          width: bar.style.width,
          backgroundColor: bar.style.backgroundColor,
          display: bar.style.display,
          visibility: bar.style.visibility,
          height: bar.style.height
        });
      });
    };

    // Fallback function to ensure progress bars show at least some fill
    function ensureProgressBarsVisible() {
      const progressBars = document.querySelectorAll('.project-progress-bar-fill');
      console.log(' Ensuring progress bars are visible...');
      
      progressBars.forEach((bar, index) => {
        const progress = parseFloat(bar.getAttribute('data-progress')) || 0;
        console.log(` Bar ${index}: Setting width to ${progress}% without animation`);
        
        // Force set the width and background color
        bar.style.width = `${progress}%`;
        bar.style.backgroundColor = '#ef4444';
        bar.style.display = 'block';
      });
    }

    // Run fallback after 5 seconds
    setTimeout(ensureProgressBarsVisible, 5000);

    // About Build Watch Slideshow Functionality
    const aboutSlideshow = document.getElementById('about-slideshow');
    const aboutPrevBtn = document.getElementById('about-prev-btn');
    const aboutNextBtn = document.getElementById('about-next-btn');
    const aboutDots = document.querySelectorAll('.about-dot');
    
    if (aboutSlideshow && aboutPrevBtn && aboutNextBtn) {
      let currentSlide = 0;
      const totalSlides = 5;
      const slideWidth = aboutSlideshow.offsetWidth;
      
      // Function to go to specific slide
      function goToSlide(slideIndex) {
        currentSlide = Math.max(0, Math.min(slideIndex, totalSlides - 1));
        aboutSlideshow.scrollTo({
          left: currentSlide * slideWidth,
          behavior: 'smooth'
        });
        updateAboutIndicators();
      }
      
      // Enhanced Update indicator dots with modern styling
      function updateAboutIndicators() {
        aboutDots.forEach((dot, index) => {
          if (index === currentSlide) {
            // Active indicator styling
            dot.style.background = 'linear-gradient(to right, #2563eb, #4f46e5)';
            dot.style.transform = 'scale(1.25)';
            dot.style.boxShadow = '0 0 25px rgba(37, 99, 235, 0.6), 0 4px 15px rgba(0, 0, 0, 0.2)';
            dot.style.border = '2px solid rgba(255, 255, 255, 0.8)';
            dot.classList.add('active');
          } else {
            // Inactive indicator styling
            dot.style.background = 'rgba(255, 255, 255, 0.6)';
            dot.style.transform = 'scale(1)';
            dot.style.boxShadow = '0 4px 8px rgba(0, 0, 0, 0.1)';
            dot.style.border = '1px solid rgba(255, 255, 255, 0.4)';
            dot.classList.remove('active');
          }
        });
      }
      
      // Navigation button event listeners
      aboutPrevBtn.addEventListener('click', () => {
        goToSlide(currentSlide - 1);
      });
      
      aboutNextBtn.addEventListener('click', () => {
        goToSlide(currentSlide + 1);
      });
      
      // Dot indicator clicks
      aboutDots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          goToSlide(index);
        });
      });
      
      // Keyboard navigation
      document.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowLeft') {
          goToSlide(currentSlide - 1);
        } else if (e.key === 'ArrowRight') {
          goToSlide(currentSlide + 1);
        }
      });
      
      // Touch/swipe support
      let touchStartX = 0;
      let touchEndX = 0;
      
      aboutSlideshow.addEventListener('touchstart', (e) => {
        touchStartX = e.changedTouches[0].screenX;
      });
      
      aboutSlideshow.addEventListener('touchend', (e) => {
        touchEndX = e.changedTouches[0].screenX;
        handleAboutSwipe();
      });
      
      function handleAboutSwipe() {
        const swipeThreshold = 50;
        const diff = touchStartX - touchEndX;
        
        if (Math.abs(diff) > swipeThreshold) {
          if (diff > 0) {
            // Swipe left - next slide
            goToSlide(currentSlide + 1);
          } else {
            // Swipe right - previous slide
            goToSlide(currentSlide - 1);
          }
        }
      }
      
      // Auto-advance slideshow
      let aboutAutoSlideInterval = setInterval(() => {
        goToSlide((currentSlide + 1) % totalSlides);
      }, 5000); // 5 seconds per slide
      
      // Pause auto-advance on hover
      aboutSlideshow.addEventListener('mouseenter', () => {
        clearInterval(aboutAutoSlideInterval);
      });
      
      aboutSlideshow.addEventListener('mouseleave', () => {
        aboutAutoSlideInterval = setInterval(() => {
          goToSlide((currentSlide + 1) % totalSlides);
        }, 5000);
      });
      
      // Handle window resize
      window.addEventListener('resize', () => {
        const newSlideWidth = aboutSlideshow.offsetWidth;
        aboutSlideshow.scrollTo({
          left: currentSlide * newSlideWidth,
          behavior: 'instant'
        });
      });
      
      // Initialize indicators
      updateAboutIndicators();
    }

    // Articles Carousel Functionality
    const articlesCarousel = document.getElementById('articles-carousel');
    const articlesPrevBtn = document.getElementById('articles-prev-btn');
    const articlesNextBtn = document.getElementById('articles-next-btn');
    
    if (articlesCarousel && articlesPrevBtn && articlesNextBtn) {
      const cardWidth = 280 + 16; // card width (280px) + gap (16px)
      let currentIndex = 0;
      const totalCards = articlesCarousel.children.length;
      
      // Calculate visible cards based on container width
      function getVisibleCards() {
        return Math.floor(articlesCarousel.offsetWidth / cardWidth);
      }
      
      // Get max index
      function getMaxIndex() {
        const visibleCards = getVisibleCards();
        return Math.max(0, totalCards - visibleCards);
      }
      
      // Smooth scroll to index
      function scrollToArticleIndex(index) {
        const maxIndex = getMaxIndex();
        currentIndex = Math.max(0, Math.min(index, maxIndex));
        
        // Use smooth scrolling with better performance
        articlesCarousel.scrollTo({
          left: currentIndex * cardWidth,
          behavior: 'smooth'
        });
        
        // Update button states after a short delay to ensure smooth animation
        setTimeout(() => {
          updateButtonStates();
        }, 100);
      }
      
      // Update navigation button states
      function updateButtonStates() {
        const maxIndex = getMaxIndex();
        
        // Previous button
        if (currentIndex <= 0) {
          articlesPrevBtn.style.opacity = '0.5';
          articlesPrevBtn.style.pointerEvents = 'none';
        } else {
          articlesPrevBtn.style.opacity = '1';
          articlesPrevBtn.style.pointerEvents = 'auto';
        }
        
        // Next button
        if (currentIndex >= maxIndex) {
          articlesNextBtn.style.opacity = '0.5';
          articlesNextBtn.style.pointerEvents = 'none';
        } else {
          articlesNextBtn.style.opacity = '1';
          articlesNextBtn.style.pointerEvents = 'auto';
        }
      }
      
      // Navigation button click handlers with improved smoothness
      articlesPrevBtn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        if (currentIndex > 0) {
          scrollToArticleIndex(currentIndex - 1);
        }
      });
      
      articlesNextBtn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        const maxIndex = getMaxIndex();
        if (currentIndex < maxIndex) {
          scrollToArticleIndex(currentIndex + 1);
        }
      });
      
      // Keyboard navigation
      document.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowLeft') {
          e.preventDefault();
          scrollToArticleIndex(currentIndex - 1);
        }
        if (e.key === 'ArrowRight') {
          e.preventDefault();
          scrollToArticleIndex(currentIndex + 1);
        }
      });
      
      // Touch/swipe support for mobile
      let startX = 0;
      let isDragging = false;
      
      articlesCarousel.addEventListener('touchstart', (e) => {
        startX = e.touches[0].clientX;
        isDragging = true;
      });
      
      articlesCarousel.addEventListener('touchmove', (e) => {
        if (!isDragging) return;
        e.preventDefault();
      });
      
      articlesCarousel.addEventListener('touchend', (e) => {
        if (!isDragging) return;
        
        const endX = e.changedTouches[0].clientX;
        const diffX = startX - endX;
        const threshold = 50; // minimum swipe distance
        
        if (Math.abs(diffX) > threshold) {
          if (diffX > 0) {
            // Swiped left - go to next
            scrollToArticleIndex(currentIndex + 1);
          } else {
            // Swiped right - go to previous
            scrollToArticleIndex(currentIndex - 1);
          }
        }
        
        isDragging = false;
      });
      
      // Auto-scroll on hover (optional)
      let autoScrollInterval;
      articlesCarousel.addEventListener('mouseenter', () => {
        autoScrollInterval = setInterval(() => {
          const maxIndex = getMaxIndex();
          if (currentIndex >= maxIndex) {
            currentIndex = 0;
          } else {
            currentIndex += 1;
          }
          scrollToArticleIndex(currentIndex);
        }, 5000); // 5 seconds
      });
      
      articlesCarousel.addEventListener('mouseleave', () => {
        if (autoScrollInterval) {
          clearInterval(autoScrollInterval);
        }
      });
      
      // Handle window resize
      window.addEventListener('resize', () => {
        // Recalculate and adjust current index if needed
        const maxIndex = getMaxIndex();
        if (currentIndex > maxIndex) {
          currentIndex = maxIndex;
          scrollToArticleIndex(currentIndex);
        }
        updateButtonStates();
      });
      
      // Initialize button states
      updateButtonStates();
    }

    // Enhanced Articles Carousel Override with Circle Indicators
    const enhancedCarousel = document.getElementById('articles-carousel');
    const enhancedPrevBtn = document.getElementById('articles-prev-btn');
    const enhancedNextBtn = document.getElementById('articles-next-btn');
    const circleIndicators = document.querySelectorAll('.indicator');
    
    if (enhancedCarousel && enhancedPrevBtn && enhancedNextBtn && circleIndicators.length > 0) {
      let activeIndex = 0;
      const slideWidth = 344; // 320px card + 24px gap
      const totalSlides = 6;
      
      // Enhanced slide transition
      function goToSlide(index) {
        activeIndex = Math.max(0, Math.min(index, totalSlides - 1));
        const translateX = -(activeIndex * slideWidth);
        enhancedCarousel.style.transform = `translateX(${translateX}px)`;
        
        updateCircleIndicators();
        updateNavButtons();
      }
      
      // Update circle indicators with beautiful animations
      function updateCircleIndicators() {
        circleIndicators.forEach((indicator, index) => {
          if (index === activeIndex) {
            indicator.style.background = 'linear-gradient(to right, #2563eb, #4f46e5)';
            indicator.style.transform = 'scale(1.3)';
            indicator.style.boxShadow = '0 0 25px rgba(37, 99, 235, 0.6)';
            indicator.style.border = '2px solid rgba(255, 255, 255, 0.8)';
          } else {
            indicator.style.background = 'rgba(255, 255, 255, 0.4)';
            indicator.style.transform = 'scale(1)';
            indicator.style.boxShadow = '0 4px 8px rgba(0, 0, 0, 0.1)';
            indicator.style.border = '1px solid rgba(255, 255, 255, 0.3)';
          }
        });
      }
      
      // Update navigation buttons
      function updateNavButtons() {
        // Previous button styling
        if (activeIndex <= 0) {
          enhancedPrevBtn.style.opacity = '0.4';
          enhancedPrevBtn.style.pointerEvents = 'none';
          enhancedPrevBtn.style.transform = 'scale(0.9)';
        } else {
          enhancedPrevBtn.style.opacity = '1';
          enhancedPrevBtn.style.pointerEvents = 'auto';
          enhancedPrevBtn.style.transform = 'scale(1)';
        }
        
        // Next button styling
        if (activeIndex >= totalSlides - 1) {
          enhancedNextBtn.style.opacity = '0.4';
          enhancedNextBtn.style.pointerEvents = 'none';
          enhancedNextBtn.style.transform = 'scale(0.9)';
        } else {
          enhancedNextBtn.style.opacity = '1';
          enhancedNextBtn.style.pointerEvents = 'auto';
          enhancedNextBtn.style.transform = 'scale(1)';
        }
      }
      
      // Navigation button events
      enhancedPrevBtn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        goToSlide(activeIndex - 1);
      });
      
      enhancedNextBtn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        goToSlide(activeIndex + 1);
      });
      
      // Circle indicator events
      circleIndicators.forEach((indicator, index) => {
        indicator.addEventListener('click', (e) => {
          e.preventDefault();
          goToSlide(index);
        });
        
        // Hover effects for indicators
        indicator.addEventListener('mouseenter', () => {
          if (index !== activeIndex) {
            indicator.style.background = 'rgba(255, 255, 255, 0.7)';
            indicator.style.transform = 'scale(1.15)';
          }
        });
        
        indicator.addEventListener('mouseleave', () => {
          if (index !== activeIndex) {
            indicator.style.background = 'rgba(255, 255, 255, 0.4)';
            indicator.style.transform = 'scale(1)';
          }
        });
      });
      
      // Keyboard navigation
      document.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowLeft') {
          e.preventDefault();
          goToSlide(activeIndex - 1);
        }
        if (e.key === 'ArrowRight') {
          e.preventDefault();
          goToSlide(activeIndex + 1);
        }
      });
      
      // Touch/swipe support
      let touchStartX = 0;
      let isSwiping = false;
      
      enhancedCarousel.addEventListener('touchstart', (e) => {
        touchStartX = e.touches[0].clientX;
        isSwiping = true;
        enhancedCarousel.style.transition = 'none';
      });
      
      enhancedCarousel.addEventListener('touchmove', (e) => {
        if (!isSwiping) return;
        e.preventDefault();
      });
      
      enhancedCarousel.addEventListener('touchend', (e) => {
        if (!isSwiping) return;
        
        enhancedCarousel.style.transition = 'transform 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
        
        const touchEndX = e.changedTouches[0].clientX;
        const swipeDistance = touchStartX - touchEndX;
        const minSwipeDistance = 80;
        
        if (Math.abs(swipeDistance) > minSwipeDistance) {
          if (swipeDistance > 0) {
            goToSlide(activeIndex + 1);
          } else {
            goToSlide(activeIndex - 1);
          }
        } else {
          goToSlide(activeIndex);
        }
        
        isSwiping = false;
      });
      
      // Initialize enhanced carousel
      updateCircleIndicators();
      updateNavButtons();
    }

    // Refresh data every 5 minutes
    setInterval(async () => {
      try {
        const [stats, barangayStats] = await Promise.all([
          homeService.getHomeStats(),
          homeService.getBarangayStats()
        ]);
        
        // Update statistics
        const ongoingCount = document.getElementById('ongoing-projects-count');
        const totalBudget = document.getElementById('total-budget');
        const completedCount = document.getElementById('completed-projects-count');
        const avgProgress = document.getElementById('avg-progress');
        const budgetUtilization = document.getElementById('budget-utilization');
        
        if (ongoingCount) ongoingCount.textContent = stats.ongoingProjects;
        if (totalBudget) totalBudget.textContent = homeService.formatBudget(stats.totalBudget);
        if (completedCount) completedCount.textContent = stats.completedProjects;
        if (avgProgress) avgProgress.textContent = `${stats.averageProgress || 75}%`;
        if (budgetUtilization) budgetUtilization.textContent = `${stats.budgetUtilization || 68}%`;
        
        // Update barangay carousel if data changed
        if (barangayStats && barangayStats.length > 0) {
          // This would require more complex DOM manipulation to update the carousel
          // For now, we'll just log that new data is available
          console.log('Barangay data refreshed:', barangayStats.length, 'barangays');
        }
        
      } catch (error) {
        console.error('Error refreshing home data:', error);
      }
    }, 5 * 60 * 1000); // 5 minutes
  });
</script> 