  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Testimonials Slideshow Functionality
      const slideshow = document.getElementById('testimonials-slideshow');
      const prevBtn = document.getElementById('testimonials-prev');
      const nextBtn = document.getElementById('testimonials-next');
      const indicators = document.querySelectorAll('.testimonial-dot');
      const slides = document.querySelectorAll('.testimonial-slide');
      
      let currentSlide = 0;
      const totalSlides = slides.length;
      let isTransitioning = false;
      
      if (slideshow && prevBtn && nextBtn) {
        // Function to show slide with fade effect
        function showSlide(index) {
          if (isTransitioning) return;
          
          const newSlide = Math.max(0, Math.min(index, totalSlides - 1));
          if (newSlide === currentSlide) return;
          
          isTransitioning = true;
          
          // Fade out current slide
          slides[currentSlide].style.opacity = '0';
          
          // After fade out, show new slide
          setTimeout(() => {
            currentSlide = newSlide;
            
            // Fade in new slide
            slides[currentSlide].style.opacity = '1';
            
            // Update indicators
            updateIndicators();
            
            // Update navigation button states
            updateNavigationButtons();
            
            // Reset transition flag
            setTimeout(() => {
              isTransitioning = false;
            }, 700);
          }, 700);
        }
        
        // Function to go to slide
        function goToSlide(index) {
          showSlide(index);
        }
        
        // Enhanced Function to update indicators with modern styling
        function updateIndicators() {
          indicators.forEach((dot, index) => {
            if (index === currentSlide) {
              // Active indicator styling
              dot.style.background = 'linear-gradient(to right, #2563eb, #4f46e5)';
              dot.style.transform = 'scale(1.25)';
              dot.style.boxShadow = '0 0 25px rgba(37, 99, 235, 0.6), 0 4px 15px rgba(0, 0, 0, 0.2)';
              dot.style.border = '2px solid rgba(255, 255, 255, 0.8)';
              dot.classList.add('active');
            } else {
              // Inactive indicator styling
              dot.style.background = 'rgba(255, 255, 255, 0.6)';
              dot.style.transform = 'scale(1)';
              dot.style.boxShadow = '0 4px 8px rgba(0, 0, 0, 0.1)';
              dot.style.border = '1px solid rgba(255, 255, 255, 0.4)';
              dot.classList.remove('active');
            }
          });
        }
        
        // Function to update navigation button states
        function updateNavigationButtons() {
          if (currentSlide === 0) {
            prevBtn.style.opacity = '0.5';
            prevBtn.style.pointerEvents = 'none';
          } else {
            prevBtn.style.opacity = '1';
            prevBtn.style.pointerEvents = 'auto';
          }
          
          if (currentSlide === totalSlides - 1) {
            nextBtn.style.opacity = '0.5';
            nextBtn.style.pointerEvents = 'none';
          } else {
            nextBtn.style.opacity = '1';
            nextBtn.style.pointerEvents = 'auto';
          }
        }
        
        // Navigation button event listeners
        prevBtn.addEventListener('click', () => {
          goToSlide(currentSlide - 1);
        });
        
        nextBtn.addEventListener('click', () => {
          goToSlide(currentSlide + 1);
        });
        
        // Indicator click event listeners
        indicators.forEach((dot, index) => {
          dot.addEventListener('click', () => {
            goToSlide(index);
          });
        });
        
        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
          if (e.key === 'ArrowLeft') {
            e.preventDefault();
            goToSlide(currentSlide - 1);
          } else if (e.key === 'ArrowRight') {
            e.preventDefault();
            goToSlide(currentSlide + 1);
          }
        });
        
        // Touch/swipe support for mobile
        let startX = 0;
        let isDragging = false;
        
        slideshow.addEventListener('touchstart', (e) => {
          startX = e.touches[0].clientX;
          isDragging = true;
        });
        
        slideshow.addEventListener('touchmove', (e) => {
          if (!isDragging) return;
          e.preventDefault();
        });
        
        slideshow.addEventListener('touchend', (e) => {
          if (!isDragging) return;
          
          const endX = e.changedTouches[0].clientX;
          const diffX = startX - endX;
          const threshold = 50; // minimum swipe distance
          
          if (Math.abs(diffX) > threshold) {
            if (diffX > 0) {
              // Swiped left - go to next
              goToSlide(currentSlide + 1);
            } else {
              // Swiped right - go to previous
              goToSlide(currentSlide - 1);
            }
          }
          
          isDragging = false;
        });
        
        // Auto-advance slideshow
        let autoAdvanceInterval = setInterval(() => {
          if (!isTransitioning) {
            if (currentSlide < totalSlides - 1) {
              showSlide(currentSlide + 1);
            } else {
              showSlide(0); // Loop back to first slide
            }
          }
        }, 5000); // Change slide every 5 seconds
        
        // Pause auto-advance on hover
        slideshow.addEventListener('mouseenter', () => {
          clearInterval(autoAdvanceInterval);
        });
        
        slideshow.addEventListener('mouseleave', () => {
          autoAdvanceInterval = setInterval(() => {
            if (!isTransitioning) {
              if (currentSlide < totalSlides - 1) {
                showSlide(currentSlide + 1);
              } else {
                showSlide(0);
              }
            }
          }, 5000);
        });
        
        // Handle window resize
        window.addEventListener('resize', () => {
          // Recalculate and adjust current slide if needed
          const slideWidth = slideshow.offsetWidth;
          const scrollPosition = currentSlide * slideWidth;
          slideshow.scrollTo({
            left: scrollPosition,
            behavior: 'auto'
          });
        });
        
        // Initialize
        updateIndicators();
        updateNavigationButtons();
        
        // Show first slide
        slides[0].style.opacity = '1';
        
        // Preload images
        slides.forEach((slide, index) => {
          const img = slide.querySelector('img');
          if (img) {
            img.addEventListener('load', () => {
              console.log(`Image ${index + 1} loaded successfully`);
            });
            img.addEventListener('error', () => {
              console.error(`Failed to load image ${index + 1}`);
              // Fallback to a placeholder image
              img.src = 'https://images.unsplash.com/photo-1560250097-0b93528c311a?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80';
            });
          }
        });
      }
    });
  </script>
