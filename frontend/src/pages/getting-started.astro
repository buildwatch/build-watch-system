    const quickSteps = document.querySelectorAll('.quick-step');
    
    quickSteps.forEach(step => {
      step.addEventListener('click', function() {
        const stepNumber = this.getAttribute('data-step');
        showStepModal(stepNumber);
      });
      
      // Keyboard navigation
      step.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          const stepNumber = this.getAttribute('data-step');
          showStepModal(stepNumber);
        }
      });
    });
    
    function showStepModal(stepNumber) {
      const stepData = {
        1: {
          title: 'Choose Your Role',
          description: 'Select your user group to access the appropriate dashboard and tools.',
          details: [
            'LGU-PMT: Project Monitoring Team members',
            'EIU: External Implementing Units',
            'EMS: External Monitoring Stakeholders',
            'IU: Internal Units'
          ],
          icon: '👥'
        },
        2: {
          title: 'Access Your Dashboard',
          description: 'Log in to your personalized dashboard to view projects and submit reports.',
          details: [
            'Use your assigned credentials to log in',
            'Navigate through your role-specific modules',
            'Access project data and analytics',
            'Submit progress reports and updates'
          ],
          icon: '📊'
        },
        3: {
          title: 'Start Monitoring',
          description: 'Begin tracking projects and collaborating with stakeholders.',
          details: [
            'Review project progress and milestones',
            'Submit regular updates and reports',
            'Collaborate with team members',
            'Monitor compliance and quality standards'
          ],
          icon: '🎯'
        }
      };
      
      const data = stepData[stepNumber];
      if (!data) return;
      
      const modal = document.createElement('div');
      modal.className = 'fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50';
      modal.innerHTML = `
        <div class="bg-white rounded-2xl p-8 max-w-2xl mx-4 shadow-2xl transform transition-all duration-300 scale-95 opacity-0">
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center gap-4">
              <div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-blue-700 rounded-full flex items-center justify-center text-2xl">
                ${data.icon}
              </div>
              <h3 class="text-2xl font-bold text-blue-800">${data.title}</h3>
            </div>
            <button class="text-blue-800 hover:text-blue-600 transition-colors duration-200" onclick="this.closest('.fixed').remove()">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          <p class="text-blue-800/80 mb-6 text-lg">${data.description}</p>
          <div class="space-y-3">
            ${data.details.map(detail => `
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-blue-800">${detail}</span>
              </div>
            `).join('')}
          </div>
        </div>
      `;
      
      document.body.appendChild(modal);
      
      // Animate modal in
      setTimeout(() => {
        modal.querySelector('.bg-white').classList.remove('scale-95', 'opacity-0');
        modal.querySelector('.bg-white').classList.add('scale-100', 'opacity-100');
      }, 10);
      
      // Close modal on backdrop click
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.remove();
        }
      });
    }
    
    // Role Card Interactions
    const roleCards = document.querySelectorAll('.role-card');
    
    roleCards.forEach(card => {
      card.addEventListener('click', function() {
        const role = this.getAttribute('data-role');
        const button = this.querySelector('button');
        
        // Add click animation
        button.style.transform = 'scale(0.95)';
        setTimeout(() => {
          button.style.transform = 'scale(1)';
        }, 150);
        
        // Navigate to appropriate login page
        navigateToRole(role);
      });
    });
    
    function navigateToRole(role) {
      const roleRoutes = {
        'lgu-pmt': '/login/lgu-pmt',
        'eiu': '/login/lgu-pmt', // EIU users also use the same login
        'ems': '/login/lgu-pmt', // EMS users also use the same login
        'iu': '/login/lgu-pmt'   // IU users also use the same login
      };
      
      const route = roleRoutes[role];
      if (route) {
