---
import Layout from "../layouts/Layout.astro";
import TopBar from "../components/TopBar.astro";
import LGUFooter from "../components/LGUFooter.astro";
---
<Layout title="Getting Started | Build Watch LGU" description="Learn how to use Build Watch and get started with project monitoring.">
  <TopBar />
  
  <!-- Enhanced Background Elements -->
  <div class="fixed inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-blue-400/10 rounded-full blur-3xl animate-float"></div>
    <div class="absolute top-1/3 -left-32 w-64 h-64 bg-indigo-400/15 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
    <div class="absolute bottom-1/4 right-1/3 w-48 h-48 bg-purple-400/10 rounded-full blur-3xl animate-float" style="animation-delay: 4s;"></div>
  </div>

  <main class="relative flex flex-col items-center w-full px-4 pt-28 pb-16 bg-gradient-to-br from-blue-50/50 via-white to-indigo-50/30 min-h-screen">
    <!-- Enhanced Hero Section -->
    <div class="text-center mb-16 animate-fade-in-up">
      <!-- Premium Badge -->
      <div class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-100/80 to-indigo-100/80 backdrop-blur-sm rounded-full border border-blue-200/50 mb-8 mt-8">
        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        <span class="text-blue-700 font-bold text-sm">Quick Start Guide</span>
      </div>
      
      <!-- Gradient Title -->
      <h1 class="text-6xl md:text-7xl font-black bg-gradient-to-r from-blue-600 via-indigo-600 to-blue-700 bg-clip-text text-transparent drop-shadow-lg leading-tight mb-6">
        Getting Started
      </h1>
      
      <!-- Enhanced Subtitle -->
      <p class="text-xl text-blue-600 mb-8 max-w-3xl mx-auto leading-relaxed">
        Master Build Watch effectively with our comprehensive guide designed for all user roles in project monitoring.
      </p>
    </div>
    <div class="w-full max-w-7xl flex flex-col gap-12">
      <!-- Enhanced Quick Start Guide -->
      <div class="group bg-gradient-to-br from-white/95 to-blue-50/90 backdrop-blur-sm rounded-3xl shadow-2xl border border-blue-100/50 p-10 hover:shadow-3xl hover:border-blue-200/60 transition-all duration-500 relative animate-fade-in-up" style="animation-delay: 0.2s;">
        <!-- Decorative Elements -->
        <div class="absolute -top-4 -right-4 w-20 h-20 bg-gradient-to-br from-blue-400/20 to-indigo-400/20 rounded-full blur-xl group-hover:scale-110 transition-transform duration-500"></div>
        <div class="absolute -bottom-6 -left-6 w-24 h-24 bg-gradient-to-br from-indigo-400/15 to-blue-400/15 rounded-full blur-2xl group-hover:scale-110 transition-transform duration-500"></div>
        
        <div class="relative z-10">
          <div class="flex items-center gap-4 mb-10">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-indigo-600 rounded-3xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div>
              <h2 class="text-blue-700 font-black text-4xl">Quick Start Guide</h2>
              <p class="text-blue-600/70 text-sm font-medium">Get up and running in 3 simple steps</p>
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Step 1: Choose Your Role -->
            <div class="quick-step group/step bg-white/80 backdrop-blur-sm border-2 border-blue-200/50 rounded-3xl p-8 transition-all duration-500 hover:border-blue-400/80 hover:shadow-2xl hover:-translate-y-2 cursor-pointer relative overflow-hidden" tabindex="0" data-step="1">
              <div class="absolute inset-0 bg-gradient-to-br from-blue-50/50 to-indigo-50/50 opacity-0 group-hover/step:opacity-100 transition-opacity duration-300"></div>
              
              <div class="relative z-10 text-center">
                <!-- Step Number Badge -->
                <div class="absolute -top-4 -right-4 w-10 h-10 bg-gradient-to-br from-blue-600 to-indigo-600 text-white rounded-full flex items-center justify-center font-black text-sm shadow-lg">1</div>
                
                <!-- 3D Icon -->
                <div class="w-24 h-24 bg-gradient-to-br from-blue-600 to-indigo-600 rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-2xl group-hover/step:shadow-3xl group-hover/step:scale-110 transition-all duration-500 relative">
                  <div class="absolute inset-0 bg-gradient-to-br from-blue-400/20 to-indigo-400/20 rounded-2xl blur-xl group-hover/step:scale-110 transition-transform duration-500"></div>
                  <svg class="w-12 h-12 text-white relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                
                <h3 class="text-2xl font-black text-blue-800 mb-4 group-hover/step:text-blue-600 transition-colors duration-300">Choose Your Role</h3>
                <p class="text-blue-700/80 text-base leading-relaxed mb-6">Select your user group (LGU-PMT, EIU, EMS, or IU) to access the appropriate dashboard and tools.</p>
                
                <!-- Interactive CTA -->
                <div class="flex items-center justify-center gap-2 text-blue-600 font-bold text-sm opacity-0 group-hover/step:opacity-100 transition-all duration-300 transform translate-y-2 group-hover/step:translate-y-0">
                  <span>Learn More</span>
                  <svg class="w-4 h-4 group-hover/step:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </div>
              </div>
            </div>
            
            <!-- Step 2: Access Your Dashboard -->
            <div class="quick-step group/step bg-white/80 backdrop-blur-sm border-2 border-emerald-200/50 rounded-3xl p-8 transition-all duration-500 hover:border-emerald-400/80 hover:shadow-2xl hover:-translate-y-2 cursor-pointer relative overflow-hidden" tabindex="0" data-step="2">
              <div class="absolute inset-0 bg-gradient-to-br from-emerald-50/50 to-teal-50/50 opacity-0 group-hover/step:opacity-100 transition-opacity duration-300"></div>
              
              <div class="relative z-10 text-center">
                <!-- Step Number Badge -->
                <div class="absolute -top-4 -right-4 w-10 h-10 bg-gradient-to-br from-emerald-600 to-teal-600 text-white rounded-full flex items-center justify-center font-black text-sm shadow-lg">2</div>
                
                <!-- 3D Icon -->
                <div class="w-24 h-24 bg-gradient-to-br from-emerald-600 to-teal-600 rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-2xl group-hover/step:shadow-3xl group-hover/step:scale-110 transition-all duration-500 relative">
                  <div class="absolute inset-0 bg-gradient-to-br from-emerald-400/20 to-teal-400/20 rounded-2xl blur-xl group-hover/step:scale-110 transition-transform duration-500"></div>
                  <svg class="w-12 h-12 text-white relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                  </svg>
                </div>
                
                <h3 class="text-2xl font-black text-emerald-800 mb-4 group-hover/step:text-emerald-600 transition-colors duration-300">Access Your Dashboard</h3>
                <p class="text-emerald-700/80 text-base leading-relaxed mb-6">Log in to your personalized dashboard to view projects, submit reports, and monitor progress.</p>
                
                <!-- Interactive CTA -->
                <div class="flex items-center justify-center gap-2 text-emerald-600 font-bold text-sm opacity-0 group-hover/step:opacity-100 transition-all duration-300 transform translate-y-2 group-hover/step:translate-y-0">
                  <span>Learn More</span>
                  <svg class="w-4 h-4 group-hover/step:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </div>
              </div>
            </div>
            
            <!-- Step 3: Start Monitoring -->
            <div class="quick-step group/step bg-white/80 backdrop-blur-sm border-2 border-purple-200/50 rounded-3xl p-8 transition-all duration-500 hover:border-purple-400/80 hover:shadow-2xl hover:-translate-y-2 cursor-pointer relative overflow-hidden" tabindex="0" data-step="3">
              <div class="absolute inset-0 bg-gradient-to-br from-purple-50/50 to-indigo-50/50 opacity-0 group-hover/step:opacity-100 transition-opacity duration-300"></div>
              
              <div class="relative z-10 text-center">
                <!-- Step Number Badge -->
                <div class="absolute -top-4 -right-4 w-10 h-10 bg-gradient-to-br from-purple-600 to-indigo-600 text-white rounded-full flex items-center justify-center font-black text-sm shadow-lg">3</div>
                
                <!-- 3D Icon -->
                <div class="w-24 h-24 bg-gradient-to-br from-purple-600 to-indigo-600 rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-2xl group-hover/step:shadow-3xl group-hover/step:scale-110 transition-all duration-500 relative">
                  <div class="absolute inset-0 bg-gradient-to-br from-purple-400/20 to-indigo-400/20 rounded-2xl blur-xl group-hover/step:scale-110 transition-transform duration-500"></div>
                  <svg class="w-12 h-12 text-white relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                  </svg>
                </div>
                
                <h3 class="text-2xl font-black text-purple-800 mb-4 group-hover/step:text-purple-600 transition-colors duration-300">Start Monitoring</h3>
                <p class="text-purple-700/80 text-base leading-relaxed mb-6">Begin tracking projects, submitting updates, and collaborating with other stakeholders.</p>
                
                <!-- Interactive CTA -->
                <div class="flex items-center justify-center gap-2 text-purple-600 font-bold text-sm opacity-0 group-hover/step:opacity-100 transition-all duration-300 transform translate-y-2 group-hover/step:translate-y-0">
                  <span>Learn More</span>
                  <svg class="w-4 h-4 group-hover/step:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Enhanced User Role Guides -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- LGU-PMT Users -->
        <div class="role-card group bg-gradient-to-br from-white/95 to-blue-50/90 backdrop-blur-sm rounded-3xl shadow-2xl border border-blue-100/50 p-8 transition-all duration-500 hover:shadow-3xl hover:border-blue-200/60 hover:-translate-y-2 cursor-pointer relative overflow-hidden animate-fade-in-up" data-role="lgu-pmt" style="animation-delay: 0.4s;">
          <!-- Decorative Elements -->
          <div class="absolute -top-4 -right-4 w-16 h-16 bg-gradient-to-br from-blue-400/20 to-indigo-400/20 rounded-full blur-xl group-hover:scale-110 transition-transform duration-500"></div>
          <div class="absolute -bottom-6 -left-6 w-20 h-20 bg-gradient-to-br from-indigo-400/15 to-blue-400/15 rounded-full blur-2xl group-hover:scale-110 transition-transform duration-500"></div>
          
          <div class="relative z-10">
            <!-- Header -->
            <div class="flex items-center justify-between mb-6">
              <div class="flex items-center gap-4">
                <div class="w-14 h-14 bg-gradient-to-br from-blue-600 to-indigo-600 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-2xl font-black text-blue-800 group-hover:text-blue-600 transition-colors duration-300">LGU-PMT Users</h3>
                  <p class="text-blue-600/70 text-sm font-medium">Project Monitoring Team</p>
                </div>
              </div>
            </div>
            
            <!-- Features List -->
            <div class="space-y-4 mb-8">
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 bg-blue-100 rounded-lg flex items-center justify-center mt-0.5 flex-shrink-0">
                  <svg class="w-3 h-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <span class="text-blue-800/90 font-medium">Monitor all ongoing projects and their progress</span>
              </div>
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 bg-blue-100 rounded-lg flex items-center justify-center mt-0.5 flex-shrink-0">
                  <svg class="w-3 h-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <span class="text-blue-800/90 font-medium">Review and validate submitted reports</span>
              </div>
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 bg-blue-100 rounded-lg flex items-center justify-center mt-0.5 flex-shrink-0">
                  <svg class="w-3 h-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <span class="text-blue-800/90 font-medium">Generate comprehensive project analytics</span>
              </div>
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 bg-blue-100 rounded-lg flex items-center justify-center mt-0.5 flex-shrink-0">
                  <svg class="w-3 h-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <span class="text-blue-800/90 font-medium">Manage user accounts and permissions</span>
              </div>
            </div>
            
            <!-- Premium Button -->
            <button class="group/btn relative w-full px-8 py-4 bg-gradient-to-r from-blue-600 via-indigo-600 to-blue-600 text-white font-black rounded-2xl shadow-2xl hover:shadow-3xl transform hover:scale-105 hover:-translate-y-1 transition-all duration-500 flex items-center justify-center gap-3 overflow-hidden">
              <!-- Button Background Animation -->
              <div class="absolute inset-0 bg-gradient-to-r from-indigo-600 via-blue-600 to-indigo-600 opacity-0 group-hover/btn:opacity-100 transition-opacity duration-500"></div>
              <div class="absolute inset-0 bg-gradient-to-r from-blue-400 to-indigo-400 blur-xl opacity-0 group-hover/btn:opacity-30 transition-opacity duration-500"></div>
              
              <!-- Button Content -->
              <div class="relative flex items-center gap-3">
                <svg class="w-5 h-5 group-hover/btn:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
                </svg>
                <span>Access Dashboard</span>
                <svg class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </div>
            </button>
          </div>
        </div>

        <!-- EIU Users -->
        <div class="role-card group bg-gradient-to-br from-white/95 to-emerald-50/90 backdrop-blur-sm rounded-3xl shadow-2xl border border-emerald-100/50 p-8 transition-all duration-500 hover:shadow-3xl hover:border-emerald-200/60 hover:-translate-y-2 cursor-pointer relative overflow-hidden animate-fade-in-up" data-role="eiu" style="animation-delay: 0.5s;">
          <!-- Decorative Elements -->
          <div class="absolute -top-4 -right-4 w-16 h-16 bg-gradient-to-br from-emerald-400/20 to-teal-400/20 rounded-full blur-xl group-hover:scale-110 transition-transform duration-500"></div>
          <div class="absolute -bottom-6 -left-6 w-20 h-20 bg-gradient-to-br from-teal-400/15 to-emerald-400/15 rounded-full blur-2xl group-hover:scale-110 transition-transform duration-500"></div>
          
          <div class="relative z-10">
            <!-- Header -->
            <div class="flex items-center justify-between mb-6">
              <div class="flex items-center gap-4">
                <div class="w-14 h-14 bg-gradient-to-br from-emerald-600 to-teal-600 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-2xl font-black text-emerald-800 group-hover:text-emerald-600 transition-colors duration-300">EIU Users</h3>
                  <p class="text-emerald-600/70 text-sm font-medium">External Implementing Units</p>
                </div>
              </div>
            </div>
            
            <!-- Features List -->
            <div class="space-y-4 mb-8">
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 bg-emerald-100 rounded-lg flex items-center justify-center mt-0.5 flex-shrink-0">
                  <svg class="w-3 h-3 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <span class="text-emerald-800/90 font-medium">Submit project progress updates and reports</span>
              </div>
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 bg-emerald-100 rounded-lg flex items-center justify-center mt-0.5 flex-shrink-0">
                  <svg class="w-3 h-3 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <span class="text-emerald-800/90 font-medium">Upload supporting documents and photos</span>
              </div>
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 bg-emerald-100 rounded-lg flex items-center justify-center mt-0.5 flex-shrink-0">
                  <svg class="w-3 h-3 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <span class="text-emerald-800/90 font-medium">Track project milestones and deadlines</span>
              </div>
              <div class="flex items-start gap-3">
                <div class="w-6 h-6 bg-emerald-100 rounded-lg flex items-center justify-center mt-0.5 flex-shrink-0">
                  <svg class="w-3 h-3 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <span class="text-emerald-800/90 font-medium">Respond to monitoring team inquiries</span>
              </div>
            </div>
            
            <!-- Premium Button -->
            <button class="group/btn relative w-full px-8 py-4 bg-gradient-to-r from-emerald-600 via-teal-600 to-emerald-600 text-white font-black rounded-2xl shadow-2xl hover:shadow-3xl transform hover:scale-105 hover:-translate-y-1 transition-all duration-500 flex items-center justify-center gap-3 overflow-hidden">
              <!-- Button Background Animation -->
              <div class="absolute inset-0 bg-gradient-to-r from-teal-600 via-emerald-600 to-teal-600 opacity-0 group-hover/btn:opacity-100 transition-opacity duration-500"></div>
              <div class="absolute inset-0 bg-gradient-to-r from-emerald-400 to-teal-400 blur-xl opacity-0 group-hover/btn:opacity-30 transition-opacity duration-500"></div>
              
              <!-- Button Content -->
              <div class="relative flex items-center gap-3">
                <svg class="w-5 h-5 group-hover/btn:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
                </svg>
                <span>Access Dashboard</span>
                <svg class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </div>
            </button>
          </div>
        </div>

        <!-- EMS Users -->
