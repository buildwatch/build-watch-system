    function showLoadingMessage(message) {
      const notification = document.createElement('div');
      notification.className = 'fixed top-4 right-4 bg-blue-600 text-white px-6 py-4 rounded-xl shadow-lg transform transition-all duration-300 translate-x-full z-50';
