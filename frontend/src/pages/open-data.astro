---
import Layout from "../layouts/Layout.astro";
import TopBar from "../components/TopBar.astro";
import LGUFooter from "../components/LGUFooter.astro";
---
<Layout title="Open Data | Build Watch LGU" description="Access public data, reports, and analytics about LGU projects and programs in Santa Cruz, Laguna.">
  <TopBar />
  <main class="flex flex-col items-center w-full px-4 pt-32 pb-20 bg-gradient-to-br from-gray-50 via-blue-50 to-white min-h-screen relative overflow-hidden fade-in-open-data">
    <!-- Enhanced Background Elements -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-20 left-10 w-32 h-32 bg-blue-200/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute top-40 right-20 w-24 h-24 bg-purple-200/20 rounded-full blur-2xl animate-pulse" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-32 left-1/3 w-40 h-40 bg-indigo-200/15 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    </div>

    <!-- Enhanced Hero Section -->
    <div class="relative z-10 text-center mb-16 mt-8">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-500/10 text-blue-600 font-semibold rounded-full mb-6 text-sm animate-fade-in-up">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"/>
        </svg>
        Open Data Portal
      </div>
      
      <h1 class="text-6xl md:text-7xl font-black text-transparent bg-clip-text bg-gradient-to-r from-blue-600 via-blue-700 to-purple-600 leading-tight mb-8 animate-fade-in-up" style="animation-delay: 0.1s;">
        Open Data Portal
      </h1>
      
      <p class="text-xl text-blue-600 max-w-4xl mx-auto leading-relaxed animate-fade-in-up" style="animation-delay: 0.2s;">
        Access public data, reports, and analytics about LGU projects and programs in Santa Cruz, Laguna
      </p>
    </div>
    <!-- Enhanced Search Section -->
    <div class="relative z-10 w-full max-w-5xl mb-12">
      <div class="bg-gradient-to-br from-white/95 to-blue-50/90 backdrop-blur-sm rounded-3xl p-8 shadow-2xl border border-blue-100/50 hover:shadow-3xl transition-all duration-500 animate-fade-in-up" style="animation-delay: 0.3s;">
        <!-- Decorative Elements -->
        <div class="absolute -top-6 -right-6 w-20 h-20 bg-gradient-to-br from-blue-400/20 to-purple-400/20 rounded-full blur-xl"></div>
        <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-gradient-to-br from-indigo-400/15 to-blue-400/15 rounded-full blur-lg"></div>
        
        <div class="relative z-10">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-600 to-purple-600 rounded-2xl flex items-center justify-center shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <div>
              <h2 class="text-blue-700 font-black text-2xl">Search Open Data</h2>
              <p class="text-blue-600/70 text-sm font-medium">Find datasets, reports, and analytics quickly</p>
            </div>
          </div>
          
          <div class="relative group">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-400/20 to-purple-400/20 rounded-2xl blur opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <div class="relative">
              <svg class="absolute left-5 top-1/2 -translate-y-1/2 w-6 h-6 text-blue-600 group-focus-within:text-blue-700 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
              <input 
                type="text" 
                id="data-search" 
                placeholder="Search datasets, categories, or keywords..." 
                class="relative w-full pl-14 pr-6 py-5 border-2 border-blue-200/50 rounded-2xl bg-white/80 backdrop-blur-sm text-blue-900 placeholder-blue-400 focus:ring-4 focus:ring-blue-500/20 focus:border-blue-500 transition-all duration-300 hover:border-blue-400 hover:bg-white shadow-lg focus:shadow-xl text-lg" 
              />
            </div>
          </div>
          
          <!-- Quick Search Tips -->
          <div class="flex items-center gap-6 mt-4 text-sm text-blue-600/70">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
              <span>Search by category</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>Filter by keywords</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span>Real-time results</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Enhanced Content Grid -->
    <div class="relative z-10 w-full max-w-7xl">
      <!-- Data Categories Section -->
      <div class="mb-12">
        <div class="flex items-center gap-4 mb-8">
          <div class="w-12 h-12 bg-gradient-to-br from-emerald-600 to-teal-600 rounded-2xl flex items-center justify-center shadow-lg">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
          </div>
          <div>
            <h2 class="text-emerald-700 font-black text-3xl">Data Categories</h2>
            <p class="text-emerald-600/70 text-sm font-medium">Browse available datasets by category</p>
          </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="data-categories">
          <!-- Enhanced Data Card 1: Project Statistics -->
          <div class="data-card group bg-gradient-to-br from-white/95 to-blue-50/90 backdrop-blur-sm rounded-3xl shadow-xl border border-blue-100/50 p-8 transition-all duration-500 hover:shadow-2xl hover:border-blue-200/60 cursor-pointer relative overflow-hidden animate-fade-in-up" style="animation-delay: 0.4s;" data-category="statistics" data-keywords="project statistics completion rates budgets timelines analytics">
            <!-- Decorative Elements -->
            <div class="absolute -top-2 -right-2 w-12 h-12 bg-gradient-to-br from-blue-400/20 to-purple-400/20 rounded-full blur-lg group-hover:scale-110 transition-transform duration-500"></div>
            
            <div class="relative z-10">
              <div class="flex items-center justify-between mb-6">
                <div class="w-14 h-14 bg-gradient-to-br from-blue-600 to-indigo-600 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                  </svg>
                </div>
                <div class="flex items-center gap-2">
                  <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
                  <span class="text-xs font-bold text-green-600 bg-green-50 px-3 py-1.5 rounded-full border border-green-200">Live Data</span>
                </div>
              </div>
              
              <h3 class="text-2xl font-black text-blue-800 mb-4 group-hover:text-blue-600 transition-colors duration-300 leading-tight">Project Statistics</h3>
              <p class="text-blue-700/80 text-base mb-6 leading-relaxed">Comprehensive statistics on project completion rates, budgets, and timelines with real-time updates.</p>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-2 text-sm text-blue-600">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span class="font-medium">Updated Weekly</span>
                </div>
                <button class="group/btn flex items-center gap-2 px-4 py-2 bg-blue-600 text-white font-bold text-sm rounded-xl shadow-lg hover:shadow-xl hover:bg-blue-700 transition-all duration-300 transform hover:scale-105">
                  <span>View Data</span>
                  <svg class="w-4 h-4 transform group-hover/btn:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </button>
              </div>
            </div>
          </div>

          <!-- Enhanced Data Card 2: Infrastructure Reports -->
          <div class="data-card group bg-gradient-to-br from-white/95 to-emerald-50/90 backdrop-blur-sm rounded-3xl shadow-xl border border-emerald-100/50 p-8 transition-all duration-500 hover:shadow-2xl hover:border-emerald-200/60 cursor-pointer relative overflow-hidden animate-fade-in-up" style="animation-delay: 0.5s;" data-category="infrastructure" data-keywords="infrastructure reports road construction building projects facility development">
            <!-- Decorative Elements -->
            <div class="absolute -top-2 -right-2 w-12 h-12 bg-gradient-to-br from-emerald-400/20 to-teal-400/20 rounded-full blur-lg group-hover:scale-110 transition-transform duration-500"></div>
            
            <div class="relative z-10">
              <div class="flex items-center justify-between mb-6">
                <div class="w-14 h-14 bg-gradient-to-br from-emerald-600 to-teal-600 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                  </svg>
                </div>
                <div class="flex items-center gap-2">
                  <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
                  <span class="text-xs font-bold text-green-600 bg-green-50 px-3 py-1.5 rounded-full border border-green-200">Live Data</span>
                </div>
              </div>
              
              <h3 class="text-2xl font-black text-emerald-800 mb-4 group-hover:text-emerald-600 transition-colors duration-300 leading-tight">Infrastructure Reports</h3>
              <p class="text-emerald-700/80 text-base mb-6 leading-relaxed">Detailed reports on road construction, building projects, and facility development progress.</p>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-2 text-sm text-emerald-600">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span class="font-medium">Updated Weekly</span>
                </div>
                <button class="group/btn flex items-center gap-2 px-4 py-2 bg-emerald-600 text-white font-bold text-sm rounded-xl shadow-lg hover:shadow-xl hover:bg-emerald-700 transition-all duration-300 transform hover:scale-105">
                  <span>View Data</span>
                  <svg class="w-4 h-4 transform group-hover/btn:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </button>
              </div>
            </div>
          </div>

          <!-- Enhanced Data Card 3: Social Programs -->
          <div class="data-card group bg-gradient-to-br from-white/95 to-purple-50/90 backdrop-blur-sm rounded-3xl shadow-xl border border-purple-100/50 p-8 transition-all duration-500 hover:shadow-2xl hover:border-purple-200/60 cursor-pointer relative overflow-hidden animate-fade-in-up" style="animation-delay: 0.6s;" data-category="social" data-keywords="social programs 4ps social pension community development">
            <!-- Decorative Elements -->
            <div class="absolute -top-2 -right-2 w-12 h-12 bg-gradient-to-br from-purple-400/20 to-pink-400/20 rounded-full blur-lg group-hover:scale-110 transition-transform duration-500"></div>
            
            <div class="relative z-10">
              <div class="flex items-center justify-between mb-6">
                <div class="w-14 h-14 bg-gradient-to-br from-purple-600 to-pink-600 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  </svg>
                </div>
                <div class="flex items-center gap-2">
                  <div class="w-3 h-3 bg-orange-500 rounded-full animate-pulse"></div>
                  <span class="text-xs font-bold text-orange-600 bg-orange-50 px-3 py-1.5 rounded-full border border-orange-200">Monthly</span>
                </div>
              </div>
              
              <h3 class="text-2xl font-black text-purple-800 mb-4 group-hover:text-purple-600 transition-colors duration-300 leading-tight">Social Programs</h3>
              <p class="text-purple-700/80 text-base mb-6 leading-relaxed">Data on 4Ps, Social Pension, and other community development initiatives and their impact.</p>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-2 text-sm text-purple-600">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span class="font-medium">Updated Monthly</span>
                </div>
                <button class="group/btn flex items-center gap-2 px-4 py-2 bg-purple-600 text-white font-bold text-sm rounded-xl shadow-lg hover:shadow-xl hover:bg-purple-700 transition-all duration-300 transform hover:scale-105">
                  <span>View Data</span>
                  <svg class="w-4 h-4 transform group-hover/btn:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </button>
              </div>
            </div>
          </div>

          <!-- Enhanced Data Card 4: Budget Information -->
          <div class="data-card group bg-gradient-to-br from-white/95 to-amber-50/90 backdrop-blur-sm rounded-3xl shadow-xl border border-amber-100/50 p-8 transition-all duration-500 hover:shadow-2xl hover:border-amber-200/60 cursor-pointer relative overflow-hidden animate-fade-in-up" style="animation-delay: 0.7s;" data-category="budget" data-keywords="budget information allocation expenditure financial data">
            <!-- Decorative Elements -->
            <div class="absolute -top-2 -right-2 w-12 h-12 bg-gradient-to-br from-amber-400/20 to-yellow-400/20 rounded-full blur-lg group-hover:scale-110 transition-transform duration-500"></div>
            
            <div class="relative z-10">
              <div class="flex items-center justify-between mb-6">
                <div class="w-14 h-14 bg-gradient-to-br from-amber-600 to-yellow-600 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                  </svg>
                </div>
                <div class="flex items-center gap-2">
                  <div class="w-3 h-3 bg-orange-500 rounded-full animate-pulse"></div>
                  <span class="text-xs font-bold text-orange-600 bg-orange-50 px-3 py-1.5 rounded-full border border-orange-200">Monthly</span>
                </div>
              </div>
              
              <h3 class="text-2xl font-black text-amber-800 mb-4 group-hover:text-amber-600 transition-colors duration-300 leading-tight">Budget Information</h3>
              <p class="text-amber-700/80 text-base mb-6 leading-relaxed">Transparent budget allocation and expenditure data for all projects with detailed breakdowns.</p>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-2 text-sm text-amber-600">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span class="font-medium">Updated Monthly</span>
                </div>
                <button class="group/btn flex items-center gap-2 px-4 py-2 bg-amber-600 text-white font-bold text-sm rounded-xl shadow-lg hover:shadow-xl hover:bg-amber-700 transition-all duration-300 transform hover:scale-105">
                  <span>View Data</span>
                  <svg class="w-4 h-4 transform group-hover/btn:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </button>
              </div>
            </div>
          </div>

          <!-- Enhanced Data Card 5: Performance Metrics -->
          <div class="data-card group bg-gradient-to-br from-white/95 to-indigo-50/90 backdrop-blur-sm rounded-3xl shadow-xl border border-indigo-100/50 p-8 transition-all duration-500 hover:shadow-2xl hover:border-indigo-200/60 cursor-pointer relative overflow-hidden animate-fade-in-up" style="animation-delay: 0.8s;" data-category="performance" data-keywords="performance metrics kpi evaluation success indicators">
            <!-- Decorative Elements -->
            <div class="absolute -top-2 -right-2 w-12 h-12 bg-gradient-to-br from-indigo-400/20 to-blue-400/20 rounded-full blur-lg group-hover:scale-110 transition-transform duration-500"></div>
            
            <div class="relative z-10">
              <div class="flex items-center justify-between mb-6">
                <div class="w-14 h-14 bg-gradient-to-br from-indigo-600 to-blue-600 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                  </svg>
                </div>
                <div class="flex items-center gap-2">
                  <div class="w-3 h-3 bg-blue-500 rounded-full animate-pulse"></div>
                  <span class="text-xs font-bold text-blue-600 bg-blue-50 px-3 py-1.5 rounded-full border border-blue-200">Quarterly</span>
                </div>
              </div>
              
              <h3 class="text-2xl font-black text-indigo-800 mb-4 group-hover:text-indigo-600 transition-colors duration-300 leading-tight">Performance Metrics</h3>
              <p class="text-indigo-700/80 text-base mb-6 leading-relaxed">Key performance indicators and evaluation metrics for project success and efficiency.</p>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-2 text-sm text-indigo-600">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span class="font-medium">Updated Quarterly</span>
                </div>
                <button class="group/btn flex items-center gap-2 px-4 py-2 bg-indigo-600 text-white font-bold text-sm rounded-xl shadow-lg hover:shadow-xl hover:bg-indigo-700 transition-all duration-300 transform hover:scale-105">
                  <span>View Data</span>
                  <svg class="w-4 h-4 transform group-hover/btn:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </button>
              </div>
            </div>
          </div>

          <!-- Enhanced Data Card 6: Public Records -->
          <div class="data-card group bg-gradient-to-br from-white/95 to-cyan-50/90 backdrop-blur-sm rounded-3xl shadow-xl border border-cyan-100/50 p-8 transition-all duration-500 hover:shadow-2xl hover:border-cyan-200/60 cursor-pointer relative overflow-hidden animate-fade-in-up" style="animation-delay: 0.9s;" data-category="records" data-keywords="public records documents contracts official files">
            <!-- Decorative Elements -->
            <div class="absolute -top-2 -right-2 w-12 h-12 bg-gradient-to-br from-cyan-400/20 to-teal-400/20 rounded-full blur-lg group-hover:scale-110 transition-transform duration-500"></div>
            
            <div class="relative z-10">
              <div class="flex items-center justify-between mb-6">
                <div class="w-14 h-14 bg-gradient-to-br from-cyan-600 to-teal-600 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
