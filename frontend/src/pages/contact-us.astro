---
import Layout from "../layouts/Layout.astro";
import TopBar from "../components/TopBar.astro";
import LGUFooter from "../components/LGUFooter.astro";
import SantaCruzMap from "../islands/SantaCruzMap.jsx";
---
<Layout title="Contact Us | Build Watch LGU" description="Contact the Build Watch team for support or inquiries.">
  <TopBar />
  <main class="flex flex-col items-center w-full px-4 pt-32 pb-20 bg-gradient-to-br from-gray-50 via-blue-50 to-white min-h-screen relative overflow-hidden">
    <!-- Enhanced Background Elements -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-20 left-10 w-32 h-32 bg-blue-200/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute top-40 right-20 w-24 h-24 bg-purple-200/20 rounded-full blur-2xl animate-pulse" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-32 left-1/3 w-40 h-40 bg-indigo-200/15 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    </div>

    <!-- Enhanced Hero Section -->
    <div class="relative z-10 text-center mb-16 mt-8">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-500/10 text-blue-600 font-semibold rounded-full mb-6 text-sm animate-fade-in-up">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884zM18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" clip-rule="evenodd"/>
        </svg>
        Get In Touch
      </div>
      
      <h1 class="text-6xl md:text-7xl font-black text-transparent bg-clip-text bg-gradient-to-r from-blue-600 via-blue-700 to-purple-600 leading-tight mb-8 animate-fade-in-up" style="animation-delay: 0.1s;">
        Contact Us
      </h1>
      
      <p class="text-xl text-blue-600 max-w-4xl mx-auto leading-relaxed animate-fade-in-up" style="animation-delay: 0.2s;">
        Connect with the Build Watch team for seamless project monitoring and support
      </p>
    </div>
    
    <!-- Full-Width Contact Information Section -->
    <div class="relative z-10 w-full max-w-[1400px] mb-16">
      <!-- Enhanced Contact Information Card - Landscape Mode -->
      <div class="group bg-gradient-to-br from-white/95 to-blue-50/90 backdrop-blur-sm rounded-3xl p-8 shadow-2xl border border-blue-100/50 hover:shadow-3xl hover:border-blue-200/60 transition-all duration-500 animate-fade-in-up relative overflow-hidden" style="animation-delay: 0.4s;">
        <!-- Decorative Elements -->
        <div class="absolute -top-6 -right-6 w-20 h-20 bg-gradient-to-br from-blue-400/20 to-purple-400/20 rounded-full blur-xl group-hover:scale-110 transition-transform duration-500"></div>
        <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-gradient-to-br from-indigo-400/15 to-blue-400/15 rounded-full blur-lg group-hover:scale-110 transition-transform duration-500"></div>
        <div class="absolute top-1/3 left-1/3 w-12 h-12 bg-gradient-to-br from-blue-400/10 to-purple-400/10 rounded-full blur-lg animate-pulse"></div>
        
        <div class="relative z-10">
          <!-- Enhanced Header -->
          <div class="flex items-center justify-between mb-12">
            <div class="flex items-center gap-6">
              <div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-indigo-600 rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all duration-300 group-hover:scale-110">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div>
                <h2 class="text-blue-700 font-black text-4xl group-hover:text-blue-600 transition-colors bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">
                  Contact Information
                </h2>
                <p class="text-blue-600/80 text-lg font-semibold">Get in touch with us directly</p>
              </div>
            </div>
            
            <!-- Status Indicator -->
            <div class="bg-white/70 backdrop-blur-sm rounded-xl px-6 py-3 border border-blue-200/50 shadow-sm">
              <div class="flex items-center gap-3">
                <div class="w-4 h-4 bg-green-500 rounded-full animate-ping"></div>
                <span class="text-blue-700 font-bold text-base">Available Now</span>
              </div>
            </div>
          </div>

          <!-- Contact Details Grid - Landscape Layout -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">
            <!-- LGU Office -->
            <div class="group/item bg-gradient-to-r from-blue-50/50 to-indigo-50/50 backdrop-blur-sm rounded-2xl p-8 border border-blue-100/50 hover:border-blue-200/60 transition-all duration-300 hover:shadow-lg">
              <div class="flex items-center gap-4 mb-6">
                <div class="w-14 h-14 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center group-hover/item:scale-110 transition-transform duration-300">
                  <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-6a1 1 0 00-1-1H9a1 1 0 00-1 1v6a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-blue-700 font-black text-2xl">LGU Santa Cruz Office</h3>
                  <p class="text-blue-600/70 text-base">Main government office</p>
                </div>
              </div>
              
              <div class="space-y-4">
                <div class="group/contact flex items-start gap-4 p-4 bg-white/60 backdrop-blur-sm rounded-xl hover:bg-white/80 transition-all duration-300 hover:shadow-md border border-white/20 hover:border-blue-200/50">
                  <div class="w-12 h-12 flex items-center justify-center mt-1">
                    <!-- Modern Location Icon -->
                    <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-indigo-500 rounded-xl flex items-center justify-center shadow-lg group-hover/contact:shadow-xl transition-all duration-300 group-hover/contact:scale-110">
                      <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                  </div>
                  <div class="flex-1">
                    <span class="text-blue-700 font-bold text-base block group-hover/contact:text-blue-600 transition-colors">Address</span>
                    <span class="text-blue-600/80 text-base leading-relaxed">Municipal Hall, Santa Cruz, Laguna</span>
                  </div>
                </div>
                
                <div class="group/contact flex items-start gap-4 p-4 bg-white/60 backdrop-blur-sm rounded-xl hover:bg-white/80 transition-all duration-300 hover:shadow-md border border-white/20 hover:border-blue-200/50">
                  <div class="w-12 h-12 flex items-center justify-center mt-1">
                    <!-- Modern Phone Icon -->
                    <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-indigo-500 rounded-xl flex items-center justify-center shadow-lg group-hover/contact:shadow-xl transition-all duration-300 group-hover/contact:scale-110">
                      <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                      </svg>
                    </div>
                  </div>
                  <div class="flex-1">
                    <span class="text-blue-700 font-bold text-base block group-hover/contact:text-blue-600 transition-colors">Phone</span>
                    <span class="text-blue-600/80 text-base leading-relaxed">(049) XXX-XXXX</span>
                  </div>
                </div>
                
                <div class="group/contact flex items-start gap-4 p-4 bg-white/60 backdrop-blur-sm rounded-xl hover:bg-white/80 transition-all duration-300 hover:shadow-md border border-white/20 hover:border-blue-200/50">
                  <div class="w-12 h-12 flex items-center justify-center mt-1">
                    <!-- Modern Email Icon -->
                    <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-indigo-500 rounded-xl flex items-center justify-center shadow-lg group-hover/contact:shadow-xl transition-all duration-300 group-hover/contact:scale-110">
                      <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                      </svg>
                    </div>
                  </div>
                  <div class="flex-1">
                    <span class="text-blue-700 font-bold text-base block group-hover/contact:text-blue-600 transition-colors">Email</span>
                    <span class="text-blue-600/80 text-base leading-relaxed">buildwatch@santacruz.gov.ph</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Technical Support -->
            <div class="group/item bg-gradient-to-r from-green-50/50 to-emerald-50/50 backdrop-blur-sm rounded-2xl p-8 border border-green-100/50 hover:border-green-200/60 transition-all duration-300 hover:shadow-lg">
              <div class="flex items-center gap-4 mb-6">
                <div class="w-14 h-14 bg-gradient-to-br from-green-500 to-emerald-600 rounded-xl flex items-center justify-center group-hover/item:scale-110 transition-transform duration-300">
                  <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M7 4a3 3 0 016 0v4a3 3 0 11-6 0V4zm4 10.93A7.001 7.001 0 0017 8a1 1 0 10-2 0A5 5 0 015 8a1 1 0 00-2 0 7.001 7.001 0 006 6.93V17H6a1 1 0 100 2h8a1 1 0 100-2h-3v-2.07z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-green-700 font-black text-2xl">Technical Support</h3>
                  <p class="text-green-600/70 text-base">System & technical assistance</p>
                </div>
              </div>
              
              <div class="space-y-4">
                <div class="group/contact flex items-start gap-4 p-4 bg-white/60 backdrop-blur-sm rounded-xl hover:bg-white/80 transition-all duration-300 hover:shadow-md border border-white/20 hover:border-green-200/50">
                  <div class="w-12 h-12 flex items-center justify-center mt-1">
                    <!-- Modern Support Icon -->
                    <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-emerald-500 rounded-xl flex items-center justify-center shadow-lg group-hover/contact:shadow-xl transition-all duration-300 group-hover/contact:scale-110">
                      <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                  </div>
                  <div class="flex-1">
                    <span class="text-green-700 font-bold text-base block group-hover/contact:text-green-600 transition-colors">Assistance</span>
                    <span class="text-green-600/80 text-base leading-relaxed">System-related issues & troubleshooting</span>
                  </div>
                </div>
                
                <div class="group/contact flex items-start gap-4 p-4 bg-white/60 backdrop-blur-sm rounded-xl hover:bg-white/80 transition-all duration-300 hover:shadow-md border border-white/20 hover:border-emerald-200/50">
                  <div class="w-12 h-12 flex items-center justify-center mt-1">
                    <!-- Modern Support Email Icon -->
                    <div class="w-10 h-10 bg-gradient-to-br from-emerald-500 to-green-500 rounded-xl flex items-center justify-center shadow-lg group-hover/contact:shadow-xl transition-all duration-300 group-hover/contact:scale-110">
                      <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M14.243 5.757a6 6 0 10-.986 9.284 1 1 0 111.087 1.678A8 8 0 1118 10a3 3 0 01-4.8 2.401A4 4 0 1114 10a1 1 0 102 0c0-1.537-.586-3.07-1.757-4.243zM12 10a2 2 0 10-4 0 2 2 0 004 0z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                  </div>
                  <div class="flex-1">
                    <span class="text-green-700 font-bold text-base block group-hover/contact:text-green-600 transition-colors">Support Email</span>
                    <span class="text-green-600/80 text-base leading-relaxed">support@buildwatch.ph</span>
                  </div>
                </div>
                
                <div class="group/contact flex items-start gap-4 p-4 bg-white/60 backdrop-blur-sm rounded-xl hover:bg-white/80 transition-all duration-300 hover:shadow-md border border-white/20 hover:border-green-200/50">
                  <div class="w-12 h-12 flex items-center justify-center mt-1">
                    <!-- Modern Clock Icon -->
                    <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-emerald-500 rounded-xl flex items-center justify-center shadow-lg group-hover/contact:shadow-xl transition-all duration-300 group-hover/contact:scale-110">
                      <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                  </div>
                  <div class="flex-1">
                    <span class="text-green-700 font-bold text-base block group-hover/contact:text-green-600 transition-colors">Hours</span>
                    <span class="text-green-600/80 text-base leading-relaxed">Monday - Friday, 8:00 AM - 5:00 PM</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Enhanced Social Media & Quick Links Section -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Social Media Links -->
            <div class="bg-gradient-to-r from-emerald-50/50 to-green-50/50 backdrop-blur-sm rounded-2xl p-8 border border-emerald-100/50 hover:border-emerald-200/60 transition-all duration-300 hover:shadow-lg">
              <div class="flex items-center gap-4 mb-6">
                <div class="w-14 h-14 bg-gradient-to-br from-emerald-500 to-green-600 rounded-xl flex items-center justify-center">
                  <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path d="M15 8a3 3 0 10-2.977-2.63l-4.94 2.47a3 3 0 100 4.319l4.94 2.47a3 3 0 10.895-1.789l-4.94-2.47a3.027 3.027 0 000-.74l4.94-2.47C13.456 7.68 14.19 8 15 8z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-emerald-700 font-black text-2xl">Stay Connected</h3>
                  <p class="text-emerald-600/70 text-base">Follow us for updates and announcements</p>
                </div>
              </div>
              
              <div class="grid grid-cols-2 gap-4">
                <a href="#" aria-label="Facebook" class="group relative flex items-center gap-3 p-4 bg-white/60 backdrop-blur-sm rounded-xl hover:bg-white/80 transition-all duration-300 hover:shadow-md border border-white/20 hover:border-blue-200/50">
                  <div class="w-12 h-12 flex items-center justify-center">
                    <!-- Modern Facebook Icon -->
                    <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-blue-700 rounded-xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all duration-300 group-hover:scale-110">
                      <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M20 10c0-5.523-4.477-10-10-10S0 4.477 0 10c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V10h2.54V7.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V10h2.773l-.443 2.89h-2.33v6.988C16.343 19.128 20 14.991 20 10z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                  </div>
                  <span class="text-emerald-700 font-bold text-base group-hover:text-emerald-600 transition-colors">Facebook</span>
                </a>
                
                <a href="#" aria-label="Twitter" class="group relative flex items-center gap-3 p-4 bg-white/60 backdrop-blur-sm rounded-xl hover:bg-white/80 transition-all duration-300 hover:shadow-md border border-white/20 hover:border-sky-200/50">
                  <div class="w-12 h-12 flex items-center justify-center">
                    <!-- Modern Twitter/X Icon -->
                    <div class="w-10 h-10 bg-gradient-to-br from-sky-500 to-sky-600 rounded-xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all duration-300 group-hover:scale-110">
                      <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"/>
                      </svg>
                    </div>
                  </div>
                  <span class="text-emerald-700 font-bold text-base group-hover:text-emerald-600 transition-colors">Twitter</span>
                </a>
                
                <a href="#" aria-label="Email" class="group relative flex items-center gap-3 p-4 bg-white/60 backdrop-blur-sm rounded-xl hover:bg-white/80 transition-all duration-300 hover:shadow-md border border-white/20 hover:border-red-200/50">
                  <div class="w-12 h-12 flex items-center justify-center">
                    <!-- Modern Email Icon -->
                    <div class="w-10 h-10 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all duration-300 group-hover:scale-110">
                      <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M2.94 6.412A2 2 0 002 8.108V16a2 2 0 002 2h12a2 2 0 002-2V8.108a2 2 0 00-.94-1.696l-6-3.75a2 2 0 00-2.12 0l-6 3.75zm2.615 2.423a1 1 0 10-1.11 1.664l5 3.333a1 1 0 001.11 0l5-3.333a1 1 0 00-1.11-1.664L10 10.798 5.555 8.835z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                  </div>
                  <span class="text-emerald-700 font-bold text-base group-hover:text-emerald-600 transition-colors">Email</span>
                </a>
                
                <a href="#" aria-label="Phone" class="group relative flex items-center gap-3 p-4 bg-white/60 backdrop-blur-sm rounded-xl hover:bg-white/80 transition-all duration-300 hover:shadow-md border border-white/20 hover:border-green-200/50">
                  <div class="w-12 h-12 flex items-center justify-center">
                    <!-- Modern Phone Icon -->
                    <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all duration-300 group-hover:scale-110">
                      <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                      </svg>
                    </div>
                  </div>
                  <span class="text-emerald-700 font-bold text-base group-hover:text-emerald-600 transition-colors">Call Us</span>
                </a>
              </div>
            </div>

            <!-- Quick Access Links -->
            <div class="bg-gradient-to-r from-blue-50/50 to-indigo-50/50 backdrop-blur-sm rounded-2xl p-8 border border-blue-100/50 hover:border-blue-200/60 transition-all duration-300 hover:shadow-lg">
              <div class="flex items-center gap-4 mb-6">
                <div class="w-14 h-14 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center">
                  <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-blue-700 font-black text-2xl">Quick Access</h3>
                  <p class="text-blue-600/70 text-base">Navigate to important resources</p>
                </div>
              </div>
              
              <div class="grid grid-cols-2 gap-3">
                <a href="/projects" class="group/link flex items-center gap-3 p-4 bg-white/60 backdrop-blur-sm rounded-xl hover:bg-white/80 transition-all duration-300 hover:shadow-md border border-white/20 hover:border-blue-200/50">
                  <div class="w-12 h-12 flex items-center justify-center">
