---
import SecretariatSidebar from './SecretariatSidebar.astro';
import SecretariatTopbar from './SecretariatTopbar.astro';
import LogoutModal from './LogoutModal.astro';

export interface Props {
  title?: string;
}

const { title = "MPMEC Secretariat Dashboard" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="MPMEC Secretariat Dashboard">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50">
    <div class="flex h-screen">
      <SecretariatSidebar />
      <div class="flex-1 flex flex-col overflow-hidden">
        <SecretariatTopbar />
        <main class="flex-1 overflow-auto">
          <slot />
        </main>
      </div>
    </div>
    
    <LogoutModal />
  </body>
</html> 