          <div class="p-4 hover:bg-white/5 transition-all duration-200 ${isUnread ? 'bg-gradient-to-r from-white/5 to-white/10' : ''} ${cursorStyle} rounded-lg hover:bg-white/10" 
               data-notification-id="${notification.id}"
               ${clickHandler}>
            <div class="flex items-start gap-4">
              <!-- Priority Indicator -->
              <div class="flex-shrink-0 pt-1">
                <div class="w-3 h-3 rounded-full ${isUnread ? 'bg-gradient-to-r from-green-400 to-green-500 animate-pulse' : 'bg-gray-500'}"></div>
