                    <!-- Action Buttons -->
                    ${notification.actionUrl && !isClickable ? `
                      <div class="flex items-center gap-2 mt-3">
                        <a href="${notification.actionUrl}" class="inline-flex items-center gap-2 text-xs text-gray-300 hover:text-white transition-colors px-3 py-1.5 rounded-lg border border-white/20 hover:bg-white/10 hover:border-white/30">
                          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                          </svg>
                          ${notification.actionText || 'View Details'}
                        </a>
                      </div>
