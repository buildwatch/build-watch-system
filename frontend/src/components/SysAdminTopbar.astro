  // ✅ ENHANCED: Global function for handling notification clicks with highlighting
  window.handleNotificationClick = function(actionUrl, targetId) {
    console.log('🎯 Notification clicked:', { actionUrl, targetId });
    
    // Close notification panel
    const notificationDropdown = document.getElementById('sysadmin-notification-dropdown');
    const notificationOverlay = document.getElementById('sysadmin-notification-overlay');
    if (notificationDropdown) notificationDropdown.classList.add('hidden');
    if (notificationOverlay) notificationOverlay.classList.add('hidden');
    
    // Construct URL with highlight parameter
    const url = new URL(actionUrl, window.location.origin);
    if (targetId) {
      url.searchParams.set('highlight', targetId);
    }
    
    console.log('🔗 Redirecting to:', url.toString());
    
    // Navigate to the URL
    window.location.href = url.toString();
