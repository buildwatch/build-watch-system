          <div class="p-8 text-center text-gray-300">
            <div class="w-20 h-20 rounded-full bg-gradient-to-br from-white/10 to-white/20 flex items-center justify-center mx-auto mb-4">
              <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h4 class="text-lg font-semibold text-gray-100 mb-2">All Caught Up!</h4>
            <p class="text-sm text-gray-400">No system notifications at the moment</p>
            <p class="text-xs text-gray-500 mt-1">System is running smoothly</p>
          </div>
        `;
        return;
      }

      const notificationsHtml = notifications.map(notification => {
        const priorityColors = {
          high: 'from-red-500/20 to-red-600/20 border-red-500/30',
          medium: 'from-yellow-500/20 to-orange-500/20 border-yellow-500/30',
          low: 'from-white/10 to-white/20 border-white/20',
          info: 'from-white/10 to-white/20 border-white/20'
        };
        
        const priorityColor = priorityColors[notification.priority] || priorityColors.info;
        const isUnread = !notification.isRead;
        
        // ✅ ENHANCED: Check if notification is clickable and has targeting data
        const isClickable = notification.module === 'user-management' && notification.targetId;
        const clickHandler = isClickable ? `onclick="handleNotificationClick('${notification.actionUrl || '/dashboard/sysadmin/modules/user-management'}', '${notification.targetId}')"` : '';
        const cursorStyle = isClickable ? 'cursor-pointer' : '';
        
        // ✅ ENHANCED: Profile picture with fallback to system icon
        const profilePicHtml = notification.profilePic ? `
          <div class="w-10 h-10 rounded-full overflow-hidden ring-2 ring-white/20 hover:ring-white/40 transition-all duration-200">
            <img src="${notification.profilePic}" 
                 alt="User" 
                 class="w-full h-full object-cover"
