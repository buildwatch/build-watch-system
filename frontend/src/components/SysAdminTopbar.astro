              <!-- ✅ ENHANCED: Profile Picture or System Icon -->
              <div class="flex-shrink-0">
                ${profilePicHtml}
              </div>
              
              <!-- Notification Content -->
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between gap-2">
                  <div class="flex-1">
                    <!-- ✅ ENHANCED: Type-specific title styling -->
                    <div class="flex items-center gap-2 mb-1">
                      <h4 class="text-sm font-semibold ${typeColorClass}">${notification.title || 'System Notification'}</h4>
                      ${notification.module ? `<span class="text-xs px-2 py-1 rounded-full bg-white/10 text-white/70">${notification.module.replace('-', ' ')}</span>` : ''}
                    </div>
                    <p class="text-sm text-gray-300 leading-relaxed">${notification.message || 'No message content'}</p>
                    
                    <!-- ✅ ENHANCED: Target ID display for user management -->
                    ${notification.targetId ? `
