---
import LGUPMTSidebar from './LGUPMTSidebar.astro';
import LGUPMTTopbar from './LGUPMTTopbar.astro';
import LogoutModal from './LogoutModal.astro';

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<div class="flex h-screen bg-gray-50">
  <LGUPMTSidebar />
  <div class="flex-1 flex flex-col overflow-hidden">
    <LGUPMTTopbar />
    <main class="flex-1 overflow-x-hidden overflow-y-auto">
      <slot />
    </main>
  </div>
</div>

<LogoutModal />

<!-- Global Profile Picture Manager for MPMEC -->
<script src="/src/scripts/mpmec-profile-picture-manager.js"></script> 