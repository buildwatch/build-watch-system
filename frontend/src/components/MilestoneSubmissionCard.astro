---
// MilestoneSubmissionCard.astro
// Component to display milestone submission summary card

const { submission } = Astro.props;
---

<style>
  /* Icon Container Styles - Matching submit-update.astro */
  .icon-container {
    @apply w-14 h-14 rounded-2xl flex items-center justify-center transition-all duration-300;
    position: relative;
    overflow: hidden;
  }
  
  .icon-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s ease-out;
    z-index: 1;
  }
  
  .icon-container:hover::before {
    left: 100%;
  }
  
  .icon-container:hover {
    @apply transform scale-110 rotate-3;
  }
  
  .icon-container svg {
    position: relative;
    z-index: 2;
  }

  /* Small Icon Container Styles - Matching submit-update.astro */
  .icon-container-small {
    @apply w-10 h-10 rounded-xl flex items-center justify-center transition-all duration-300;
    position: relative;
    overflow: hidden;
  }
  
  .icon-container-small::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s ease-out;
    z-index: 1;
  }
  
  .icon-container-small > * {
    position: relative;
    z-index: 2;
  }
  
  .icon-container-small:hover::before {
    left: 100%;
  }
  
  .icon-container-small:hover {
    @apply transform scale-110 rotate-3;
  }

  /* Enhanced Button Styles */
  .enhanced-button {
    @apply px-6 py-3 font-semibold rounded-xl transition-all duration-300 flex items-center gap-2 shadow-md;
    position: relative;
    overflow: hidden;
  }
  
  .enhanced-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease-out;
    z-index: 1;
  }
  
  .enhanced-button:hover::before {
    left: 100%;
  }
  
  .enhanced-button:hover {
    @apply transform scale-105 shadow-xl;
  }
  
  .enhanced-button svg {
    position: relative;
    z-index: 2;
  }
</style>

<div class="bg-white rounded-xl shadow-md border border-gray-200 hover:shadow-lg transition-all duration-300 overflow-hidden">
  <!-- Header with Project Info -->
  <div class="bg-gradient-to-r from-amber-50 to-orange-50 p-6 border-b border-gray-100">
    <!-- Project Information Header -->
    <div class="flex items-center gap-3 mb-4">
      <div class="icon-container-small bg-gradient-to-br from-amber-500 to-orange-600">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
      </div>
      <h2 class="text-xl font-bold text-amber-800">Project Information</h2>
    </div>
    
    <div class="flex items-start justify-between mb-4">
      <div class="flex-1">
        <h3 class="text-lg font-bold text-gray-800 mb-1">{submission.projectName}</h3>
        <p class="text-sm text-gray-600 mb-2">{submission.projectCode}</p>
        <p class="text-sm text-gray-700 line-clamp-2">{submission.projectDescription}</p>
      </div>
      <div class="ml-4 text-right">
        <div class="text-sm text-gray-600">Total Budget</div>
        <div class="text-lg font-bold text-green-600">₱{submission.totalBudget?.toLocaleString()}</div>
      </div>
    </div>
    
    <div class="grid grid-cols-3 gap-4 text-sm">
      <div>
        <span class="text-gray-600">Start Date:</span>
        <div class="font-medium text-gray-800">{submission.startDate}</div>
      </div>
      <div>
        <span class="text-gray-600">End Date:</span>
        <div class="font-medium text-gray-800">{submission.endDate}</div>
      </div>
      <div>
        <span class="text-gray-600">Overall Progress:</span>
        <div class="font-bold text-blue-600">{submission.overallProgress}%</div>
      </div>
    </div>
  </div>

  <!-- Milestone Update Section (UX emphasized) -->
  <div class="p-6">
    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg p-4 mb-4 border border-blue-100">
      <div class="flex items-center gap-3 mb-4">
        <div class="icon-container-small bg-gradient-to-br from-blue-500 to-indigo-600">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
          </svg>
        </div>
        <h4 class="text-lg font-bold text-blue-800">Milestone Update Details</h4>
        <span class="px-3 py-1 bg-blue-100 text-blue-700 text-xs rounded-full font-medium flex items-center gap-1">
          <div class="w-2 h-2 bg-blue-500 rounded-full animate-pulse"></div>
          New Submission
        </span>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <div class="text-sm text-gray-600 mb-1">Milestone Name</div>
          <div class="font-medium text-gray-800">{submission.milestone.name}</div>
        </div>
        <div>
          <div class="text-sm text-gray-600 mb-1">Planned Budget</div>
          <div class="font-medium text-green-600">₱{submission.milestone.plannedBudget?.toLocaleString()}</div>
        </div>
        <div>
          <div class="text-sm text-gray-600 mb-1">Weight</div>
          <div class="font-medium text-purple-600">{submission.milestone.weight}%</div>
        </div>
        <div>
          <div class="text-sm text-gray-600 mb-1">Due Date</div>
          <div class="font-medium text-gray-800">{submission.milestone.dueDate}</div>
        </div>
      </div>
      
      <div class="mt-3">
        <div class="text-sm text-gray-600 mb-1">Description</div>
        <div class="text-sm text-gray-700 line-clamp-2">{submission.milestone.description}</div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-3 pt-3 border-t border-blue-200">
        <div>
          <div class="text-sm text-gray-600 mb-1">Submission Date</div>
          <div class="font-medium text-gray-800">{submission.milestone.submissionDate}</div>
        </div>
        <div>
          <div class="text-sm text-gray-600 mb-1">Submitted By</div>
          <div class="font-medium text-gray-800">{submission.milestone.submittedBy}</div>
        </div>
      </div>
    </div>

    <!-- Review Submission Button -->
    <div class="flex justify-end">
      <button 
        onclick={`openMilestoneSubmissionModal('${submission.id}')`}
        class="enhanced-button bg-gradient-to-r from-amber-600 to-orange-600 text-white hover:from-amber-700 hover:to-orange-700"
      >
        <div class="icon-container-small bg-white/20 hover:bg-white/30">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
        </div>
        Review Submission
      </button>
    </div>
  </div>
</div> 