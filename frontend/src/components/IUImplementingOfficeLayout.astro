---
import IUImplementingOfficeSidebar from './IUImplementingOfficeSidebar.astro';
import IUImplementingOfficeTopbar from './IUImplementingOfficeTopbar.astro';
import LogoutModal from './LogoutModal.astro';

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<div class="flex h-screen bg-gray-50">
  <IUImplementingOfficeSidebar />
  <div class="flex-1 flex flex-col overflow-hidden">
    <IUImplementingOfficeTopbar />
    <main class="flex-1 overflow-x-hidden overflow-y-auto">
      <slot />
    </main>
  </div>
</div>

<LogoutModal />

<!-- Global Profile Picture Manager for LGU-IU IOO -->
<script src="/src/scripts/lgu-iu-profile-picture-manager.js"></script> 