---
import EIUSidebar from './EIUSidebar.astro';
import EIUTopbar from './EIUTopbar.astro';
import LogoutModal from './LogoutModal.astro';

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<div class="flex h-screen bg-gray-50">
  <EIUSidebar />
  <div class="flex-1 flex flex-col overflow-hidden">
    <EIUTopbar />
    <main class="flex-1 overflow-x-hidden overflow-y-auto">
      <slot />
    </main>
  </div>
</div>

<LogoutModal />

<!-- Global Profile Picture Manager for EIU -->
<script src="/src/scripts/eiu-profile-picture-manager.js"></script> 