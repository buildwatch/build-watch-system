            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
        </div>
        <span class="font-medium text-white/90 group-hover:text-white">Create Activity</span>
      </a>

      <!-- LGU Feedback -->
