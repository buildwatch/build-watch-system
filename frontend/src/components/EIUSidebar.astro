    <div class="flex items-center gap-4 mb-4">
      <div class="w-14 h-14 bg-gradient-to-br from-white to-gray-100 rounded-2xl flex items-center justify-center shadow-lg ring-2 ring-white/20">
        <span id="eiu-sidebar-initials" class="text-[#3C9CEB] font-bold text-lg">E</span>
      </div>
      <div>
        <h1 id="eiu-sidebar-name" class="text-xl font-bold tracking-tight text-white drop-shadow-sm">EIU Personnel</h1>
        <p id="eiu-sidebar-role" class="text-sm text-white/80 font-medium">External Implementing Unit</p>
        <p id="eiu-sidebar-status" class="text-xs text-white/60">Status: <span class="font-medium text-green-300">Active</span></p>
      </div>
    </div>
  </div>

