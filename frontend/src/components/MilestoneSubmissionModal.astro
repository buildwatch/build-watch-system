---
// MilestoneSubmissionModal.astro
// Enhanced Modal component to display comprehensive milestone submission information

const { submissionId } = Astro.props;
---

<style>
  /* Icon Container Styles - Matching submit-update.astro */
  .icon-container {
    @apply w-14 h-14 rounded-2xl flex items-center justify-center transition-all duration-300;
    position: relative;
    overflow: hidden;
  }
  
  .icon-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s ease-out;
    z-index: 1;
  }
  
  .icon-container:hover::before {
    left: 100%;
  }
  
  .icon-container:hover {
    @apply transform scale-110 rotate-3;
  }
  
  .icon-container svg {
    position: relative;
    z-index: 2;
  }

  /* Small Icon Container Styles - Matching submit-update.astro */
  .icon-container-small {
    @apply w-10 h-10 rounded-xl flex items-center justify-center transition-all duration-300;
    position: relative;
    overflow: hidden;
  }
  
  .icon-container-small::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s ease-out;
    z-index: 1;
  }
  
  .icon-container-small > * {
    position: relative;
    z-index: 2;
  }
  
  .icon-container-small:hover::before {
    left: 100%;
  }
  
  .icon-container-small:hover {
    @apply transform scale-110 rotate-3;
  }

  /* Enhanced Close Button Styles */
  .close-button {
    @apply w-10 h-10 rounded-xl flex items-center justify-center transition-all duration-300;
    position: relative;
    overflow: hidden;
  }
  
  .close-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    transition: left 0.5s ease-out;
    z-index: 1;
  }
  
  .close-button:hover::before {
    left: 100%;
  }
  
  .close-button:hover {
    @apply transform scale-110 rotate-3 bg-white/30;
  }
  
  .close-button svg {
    position: relative;
    z-index: 2;
  }
</style>

<!-- Enhanced Milestone Submission Review Modal -->
<div id="milestoneSubmissionModal" class="fixed inset-0 bg-black bg-opacity-60 hidden z-50 overflow-y-auto backdrop-blur-sm">
  <div class="flex items-start justify-center min-h-screen px-4 py-8">
    <div class="bg-white rounded-2xl shadow-2xl max-w-7xl w-full max-h-[95vh] overflow-hidden flex flex-col border border-amber-200">
      
      <!-- Header (matching submit-update.astro style) -->
      <div class="bg-gradient-to-r from-amber-600 to-orange-600 text-white p-6 flex items-center justify-between relative">
        <div class="flex items-center gap-4">
          <div class="icon-container bg-gradient-to-br from-amber-500 to-orange-600 shadow-xl">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <div>
            <h2 class="text-3xl font-bold">Milestone Submission Review</h2>
            <p class="text-white/90 text-sm">Comprehensive review and processing of milestone update submission</p>
          </div>
        </div>
        
        <button onclick="closeMilestoneSubmissionModal()" class="close-button bg-white/20 hover:bg-white/30">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Enhanced Modal Content -->
      <div class="flex-1 overflow-y-auto p-6 bg-gradient-to-br from-gray-50 to-amber-50/30" id="modalContent">
        
        <!-- General Information Section -->
        <div class="bg-white rounded-2xl p-6 mb-6 shadow-lg border border-blue-100 hover:shadow-xl transition-shadow duration-300">
          <h3 class="text-xl font-bold text-blue-800 mb-6 flex items-center gap-3">
            <div class="icon-container-small bg-gradient-to-br from-blue-500 to-blue-600">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            General Information
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="generalInfo">
            <!-- Will be populated by JavaScript -->
          </div>
        </div>

        <!-- Milestone Information Section -->
        <div class="bg-white rounded-2xl p-6 mb-6 shadow-lg border border-green-100 hover:shadow-xl transition-shadow duration-300">
          <h3 class="text-xl font-bold text-green-800 mb-6 flex items-center gap-3">
            <div class="icon-container-small bg-gradient-to-br from-green-500 to-green-600">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
              </svg>
            </div>
            Milestone Information
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" id="milestoneInfo">
            <!-- Will be populated by JavaScript -->
          </div>
        </div>

        <!-- Enhanced Submission Information Section -->
        <div class="bg-gradient-to-br from-amber-50 to-orange-50 rounded-2xl p-6 mb-6 shadow-lg border-2 border-amber-200 relative overflow-hidden">
          <div class="absolute top-0 right-0 w-32 h-32 bg-amber-300/10 rounded-full -translate-y-16 translate-x-16"></div>
          <div class="absolute bottom-0 left-0 w-24 h-24 bg-orange-300/10 rounded-full translate-y-12 -translate-x-12"></div>
          
          <h3 class="text-2xl font-bold text-amber-800 mb-8 flex items-center gap-3 relative z-10">
            <div class="icon-container-small bg-gradient-to-br from-amber-500 to-amber-600">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            Submission Information
            <span class="text-sm font-normal text-amber-600 bg-amber-100 px-3 py-1 rounded-full">EIU Update Details</span>
          </h3>
          
          <div class="space-y-8 relative z-10">
            
            <!-- All Division Weight Overview -->
            <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 border border-amber-200 shadow-md">
              <h4 class="text-lg font-bold text-amber-800 mb-4 flex items-center gap-2">
                <div class="icon-container-small bg-gradient-to-br from-amber-500 to-amber-600">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                  </svg>
                </div>
                All Division Weight
              </h4>
              <div id="divisionWeightInfo" class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <!-- Will be populated by JavaScript -->
              </div>
            </div>

            <!-- Timeline Division -->
            <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 border border-purple-200 shadow-md">
              <h4 class="text-lg font-bold text-purple-800 mb-4 flex items-center gap-2">
                <div class="icon-container-small bg-gradient-to-br from-purple-500 to-purple-600">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                Timeline Division
              </h4>
              <div id="timelineInfo">
                <!-- Will be populated by JavaScript -->
              </div>
            </div>

            <!-- Budget Division -->
            <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 border border-green-200 shadow-md">
              <h4 class="text-lg font-bold text-green-800 mb-4 flex items-center gap-2">
                <div class="icon-container-small bg-gradient-to-br from-green-500 to-green-600">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                  </svg>
                </div>
                Budget Division
              </h4>
              <div id="budgetInfo">
                <!-- Will be populated by JavaScript -->
              </div>
            </div>

            <!-- Physical Division -->
            <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 border border-orange-200 shadow-md">
              <h4 class="text-lg font-bold text-orange-800 mb-4 flex items-center gap-2">
                <div class="icon-container-small bg-gradient-to-br from-orange-500 to-orange-600">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
                Physical Division
              </h4>
              <div id="physicalInfo">
                <!-- Will be populated by JavaScript -->
              </div>
            </div>

            <!-- Submitted By Information -->
            <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 border border-gray-200 shadow-md">
              <h4 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                <div class="icon-container-small bg-gradient-to-br from-gray-500 to-gray-600">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                Submitted By
              </h4>
              <div id="submitterInfo">
                <!-- Will be populated by JavaScript -->
              </div>
            </div>
          </div>
        </div>

        <!-- Attached Files Section -->
        <div class="bg-white rounded-2xl p-6 mb-6 shadow-lg border border-indigo-100 hover:shadow-xl transition-shadow duration-300">
          <h3 class="text-xl font-bold text-indigo-800 mb-6 flex items-center gap-3">
            <div class="icon-container-small bg-gradient-to-br from-indigo-500 to-indigo-600">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"></path>
              </svg>
            </div>
            Attached Files
          </h3>
          <div id="attachedFiles">
            <!-- Will be populated by JavaScript -->
          </div>
        </div>

        <!-- Admin Actions Section -->
        <div class="bg-gradient-to-br from-yellow-50 to-amber-50 rounded-2xl p-6 shadow-lg border-2 border-yellow-200">
          <h3 class="text-xl font-bold text-yellow-800 mb-6 flex items-center gap-3">
            <div class="icon-container-small bg-gradient-to-br from-yellow-500 to-yellow-600">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            Action Buttons
          </h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <!-- RPMES Form Upload -->
            <div class="bg-white/80 rounded-xl p-4 border border-yellow-200">
              <label class="block text-sm font-semibold text-yellow-800 mb-2">Attach RPMES Form *</label>
              <input type="file" id="rpmesFormUpload" accept=".pdf,.doc,.docx,.xlsx,.xls" 
                     class="w-full px-3 py-2 border border-yellow-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 bg-white">
              <p class="text-xs text-yellow-600 mt-1">Required: Upload the completed RPMES form for this milestone</p>
            </div>

            <!-- Additional Document Upload -->
            <div class="bg-white/80 rounded-xl p-4 border border-yellow-200">
              <label class="block text-sm font-semibold text-yellow-800 mb-2">Additional Document (Optional)</label>
              <input type="file" id="additionalDocUpload" accept=".pdf,.doc,.docx,.xlsx,.xls,.jpg,.png" 
                     class="w-full px-3 py-2 border border-yellow-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 bg-white">
              <p class="text-xs text-yellow-600 mt-1">Optional: Any supporting documents</p>
            </div>
          </div>

          <!-- Additional Notes -->
          <div class="bg-white/80 rounded-xl p-4 border border-yellow-200">
            <label class="block text-sm font-semibold text-yellow-800 mb-2">Additional Notes (Optional)</label>
            <textarea id="adminNotes" rows="3" maxlength="500"
                      class="w-full px-3 py-2 border border-yellow-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500 bg-white"
                      placeholder="Any additional notes or comments for this submission..."></textarea>
            <div class="flex justify-between mt-1">
              <span class="text-xs text-yellow-600">Optional: Notes for the secretariat</span>
              <span class="text-xs text-yellow-500" id="notesCharCount">0/500</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Enhanced Modal Footer -->
      <div class="bg-gradient-to-r from-gray-100 to-amber-50 px-6 py-5 flex items-center justify-between border-t-2 border-amber-200">
        <div class="flex items-center gap-3">
          <div class="flex items-center gap-2 text-sm text-gray-700 bg-white px-3 py-2 rounded-lg shadow-sm border">
            <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span id="submissionDate">Submitted: --</span>
          </div>
          <div class="text-xs text-gray-500" id="submissionStatus">
            Status: Under Review
          </div>
        </div>
        
        <div class="flex items-center gap-4">
          <button 
            onclick="rejectMilestoneSubmissionWithLifecycle()"
            class="px-8 py-3 bg-gradient-to-r from-red-600 to-red-700 text-white font-semibold rounded-xl hover:from-red-700 hover:to-red-800 transition-all duration-200 flex items-center gap-2 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            Reject & Request Revision
          </button>
          
          <button 
            onclick="submitToMPMECSecretariatWithLifecycle()"
            class="px-8 py-3 bg-gradient-to-r from-green-600 via-emerald-600 to-green-700 text-white font-semibold rounded-xl hover:from-green-700 hover:via-emerald-700 hover:to-green-800 transition-all duration-200 flex items-center gap-2 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Approve & Submit to MPMEC
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Photo Preview Modal (from submit-update.astro) -->
<div id="photo-preview-modal" class="fixed inset-0 bg-black bg-opacity-75 z-50 hidden">
  <div class="absolute inset-0 flex items-center justify-center p-4">
    <!-- Close Button -->
    <button 
      onclick="closePhotoPreview()" 
      class="absolute top-4 right-4 bg-red-500 hover:bg-red-600 text-white rounded-full w-12 h-12 flex items-center justify-center text-2xl font-bold z-20 transition-colors shadow-lg"
      title="Close (Esc)"
    >
      ×
    </button>
    
    <!-- Photo Title -->
    <div class="absolute top-4 left-4 bg-black bg-opacity-70 text-white px-4 py-2 rounded-lg z-20 shadow-lg">
      <p id="modal-photo-title" class="text-sm font-medium"></p>
    </div>
    
    <!-- Photo Container - Perfectly Centered -->
    <div class="flex items-center justify-center w-full h-full">
      <img 
        id="modal-photo" 
        src="" 
        alt="Photo Preview" 
        class="max-w-full max-h-full object-contain rounded-lg shadow-2xl"
        style="max-height: 85vh; max-width: 85vw; display: block; margin: auto;"
      />
    </div>
    
    <!-- Instructions -->
    <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 bg-black bg-opacity-70 text-white px-4 py-2 rounded-lg z-20 shadow-lg">
      <p class="text-xs text-center">Click outside or press Esc to close</p>
    </div>
  </div>
</div>

<!-- Video Preview Modal (from submit-update.astro) -->
<div id="video-preview-modal" class="fixed inset-0 bg-black bg-opacity-75 z-50 hidden">
  <div class="absolute inset-0 flex items-center justify-center p-4">
    <!-- Close Button -->
    <button 
      onclick="closeVideoPreview()" 
      class="absolute top-4 right-4 bg-red-500 hover:bg-red-600 text-white rounded-full w-12 h-12 flex items-center justify-center text-2xl font-bold z-20 transition-colors shadow-lg"
      title="Close (Esc)"
    >
      ×
    </button>
    
    <!-- Video Title -->
    <div class="absolute top-4 left-4 bg-black bg-opacity-70 text-white px-4 py-2 rounded-lg z-20 shadow-lg">
      <p id="modal-video-title" class="text-sm font-medium"></p>
    </div>
    
    <!-- Video Container - Perfectly Centered -->
    <div class="flex items-center justify-center w-full h-full">
      <video 
        id="modal-video" 
        controls 
        class="max-w-full max-h-full rounded-lg shadow-2xl"
        style="max-height: 85vh; max-width: 85vw; display: block; margin: auto;"
        preload="metadata"
      >
        Your browser does not support the video tag.
      </video>
    </div>
    
    <!-- Instructions -->
    <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 bg-black bg-opacity-70 text-white px-4 py-2 rounded-lg z-20 shadow-lg">
      <p class="text-xs text-center">Click outside or press Esc to close • Use video controls to play/pause</p>
    </div>
  </div>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Enhanced scrollbar */
  #modalContent::-webkit-scrollbar {
    width: 8px;
  }
  
  #modalContent::-webkit-scrollbar-track {
    background: #f1f5f9;
    border-radius: 4px;
  }
  
  #modalContent::-webkit-scrollbar-thumb {
    background: linear-gradient(to bottom, #d97706, #f59e0b);
    border-radius: 4px;
  }
  
  #modalContent::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(to bottom, #b45309, #d97706);
  }
  
  /* Smooth animations */
  .transition-all {
    transition-property: all;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Info card hover effects */
  .info-card {
    transition: all 0.3s ease;
  }
  
  .info-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
</style> 